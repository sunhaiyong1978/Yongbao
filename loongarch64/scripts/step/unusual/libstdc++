source env/unusual/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=unusual
export STEP_PACKAGENAME=libstdc++
export PACKAGE_VERSION=14.2.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/unusual/libstdc++/14.2.0/
rm -rf ${BUILD_DIRECTORY}/gcc-14.2.0
tar xvf ${DOWNLOADDIR}/gcc-14.2.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gcc-14.2.0
	patch -Np1 -i ${SYSDIR}/files/unusual/libstdc++/14.2.0/patches/0001-gcc-13-add-cmodule-medium-for-loongarch-libgcc.patch 
	 
	sed -i 's@\./fixinc\.sh@-c true@' gcc/Makefile.in
	mkdir -pv cross-build
	pushd cross-build
		../libstdc++-v3/configure --prefix=/usr --libdir=/usr/lib${LIB_SUFF} --build=${CROSS_HOST} \
		             --host=${CROSS_TARGET} --target=${CROSS_TARGET} \
		             --enable-__cxa_atexit --enable-threads=posix \
		             --with-system-zlib --enable-libstdcxx-time \
		             --enable-checking=release \
		             --disable-multilib \
		             --with-build-sysroot=${SYSROOT_DIR} \
			     --enable-linker-build-id --with-linker-hash-style=gnu --enable-gnu-unique-object --enable-initfini-array --enable-gnu-indirect-function \
		             --enable-default-pie
		make -j${JOBS}
	popd
popd 
rm -rf ${BUILD_DIRECTORY}/gcc-14.2.0
