source env/unusual/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=unusual
export STEP_PACKAGENAME=gtk4
export PACKAGE_VERSION=4.20.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/unusual/gtk4/4.20.0/
rm -rf ${BUILD_DIRECTORY}/gtk-4.20.0
tar xvf ${DOWNLOADDIR}/gtk-4.20.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gtk-4.20.0
	patch -Np1 -i ${SYSDIR}/files/unusual/gtk4/4.20.0/patches/0001-remove-cflag-Wimplicit-function-declaration-because-.patch 
	 
	mkdir cross-build
	pushd cross-build
		CFLAGS="${CFLAGS} -Wno-implicit-function-declaration" meson ${MESON_CONFIG}  -Dbroadway-backend=true -Dmedia-gstreamer=disabled -Dintrospection=enabled -Dbuild-tests=false -Dvulkan=disabled \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gtk-4.20.0
