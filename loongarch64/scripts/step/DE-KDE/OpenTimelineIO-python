source env/DE-KDE/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=DE-KDE
export STEP_PACKAGENAME=OpenTimelineIO-python
export PACKAGE_VERSION=0.15.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/DE-KDE/OpenTimelineIO-python/0.15.0/
rm -rf ${BUILD_DIRECTORY}/OpenTimelineIO-0.15.0
tar xvf ${DOWNLOADDIR}/OpenTimelineIO-0.15.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/OpenTimelineIO-0.15.0
	
	_PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        _PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --ignore-installed --no-user OpenTimelineIO --root=${SYSROOT_DIR} --prefix=/usr
popd 
rm -rf ${BUILD_DIRECTORY}/OpenTimelineIO-0.15.0
