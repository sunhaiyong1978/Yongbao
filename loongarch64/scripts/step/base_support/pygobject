source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=pygobject
export PACKAGE_VERSION=3.46.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/pygobject/3.46.0/
rm -rf ${BUILD_DIRECTORY}/pygobject-3.46.0
tar xvf ${DOWNLOADDIR}/pygobject-3.46.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pygobject-3.46.0
    mkdir cross-build
    pushd cross-build
        meson ${MESON_CONFIG} -Dtests=false ..
        CC="${CROSS_TARGET}-gcc" ninja
        DESTDIR=${SYSROOT_DIR} ninja install
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/pygobject-3.46.0
