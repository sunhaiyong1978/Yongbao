source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=ndctl
export PACKAGE_VERSION=83
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/ndctl/83/
rm -rf ${BUILD_DIRECTORY}/ndctl-83
tar xvf ${DOWNLOADDIR}/ndctl-83.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/ndctl-83
	patch -Np1 -i ${SYSDIR}/files/base_support/ndctl/83/patches/0001-ndctl-83-fix-systemd-and-udev-dir-for-cross-build.patch 
	 
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} -Dbashcompletiondir=/usr/share/bash-completion/completions -Diniparserdir=${SYSROOT_DIR}/usr/include/iniparser \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}*.la
popd 
rm -rf ${BUILD_DIRECTORY}/ndctl-83
