source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=ruby
export PACKAGE_VERSION=3.4.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/ruby/3.4.2/
rm -rf ${BUILD_DIRECTORY}/ruby-3.4.2
tar xvf ${DOWNLOADDIR}/ruby-3.4.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/ruby-3.4.2
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --enable-shared --with-rubylibprefix=/usr/lib${LIB_SUFF}/ruby --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
	run_step_package_check check
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/ruby-3.4.2
