source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libxcvt
export PACKAGE_VERSION=0.1.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libxcvt/0.1.3/
rm -rf ${BUILD_DIRECTORY}/libxcvt-0.1.3
tar xvf ${DOWNLOADDIR}/libxcvt-0.1.3.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxcvt-0.1.3
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libxcvt-0.1.3
