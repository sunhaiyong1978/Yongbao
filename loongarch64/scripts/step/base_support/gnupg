source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=gnupg
export PACKAGE_VERSION=2.5.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/gnupg/2.5.5/
rm -rf ${BUILD_DIRECTORY}/gnupg-2.5.5
tar xvf ${DOWNLOADDIR}/gnupg-2.5.5.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gnupg-2.5.5
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} GPG_ERROR_CONFIG=${CROSSTOOLS_DIR}/bin/gpg-error-config GPGRT_CONFIG=${CROSSTOOLS_DIR}/bin/gpgrt-config --disable-doc --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
	run_step_package_check check
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gnupg-2.5.5
