source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libsecret
export PACKAGE_VERSION=0.21.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libsecret/0.21.0/
rm -rf ${BUILD_DIRECTORY}/libsecret-0.21.0
tar xvf ${DOWNLOADDIR}/libsecret-0.21.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libsecret-0.21.0
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} -Dgtk_doc=false -Dintrospection=true \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libsecret-0.21.0
