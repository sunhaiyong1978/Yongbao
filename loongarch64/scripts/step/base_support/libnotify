source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libnotify
export PACKAGE_VERSION=0.8.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libnotify/0.8.2/
rm -rf ${BUILD_DIRECTORY}/libnotify-0.8.2
tar xvf ${DOWNLOADDIR}/libnotify-0.8.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libnotify-0.8.2
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  -Dgtk_doc=false -Dman=false \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libnotify-0.8.2
