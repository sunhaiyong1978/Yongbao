source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=Vulkan-Headers
export PACKAGE_VERSION=1.4.329
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/Vulkan-Headers/1.4.329/
rm -rf ${BUILD_DIRECTORY}/Vulkan-Headers-1.4.329
tar xvf ${DOWNLOADDIR}/Vulkan-Headers-1.4.329.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/Vulkan-Headers-1.4.329
        
	mkdir cross-build
	pushd cross-build
        	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++"  \
		cmake -G "Ninja" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
		      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
       		      -DCMAKE_INSTALL_PREFIX=/usr \
		      -DBUILD_SHARED_LIBS=ON \
		       -Wno-dev ..
		eval ${NINJA_AND_INSTALL}
	popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/Vulkan-Headers-1.4.329
