source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libdaemon
export PACKAGE_VERSION=0.14
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libdaemon/0.14/
rm -rf ${BUILD_DIRECTORY}/libdaemon-0.14
tar xvf ${DOWNLOADDIR}/libdaemon-0.14.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libdaemon-0.14
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} ac_cv_func_setpgrp_void=yes --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
	run_step_package_check check
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libdaemon-0.14
