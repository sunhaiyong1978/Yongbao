source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=mediainfo
export PACKAGE_VERSION=24.05
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/mediainfo/24.05/
rm -rf ${BUILD_DIRECTORY}/MediaInfo
tar xvf ${DOWNLOADDIR}/mediainfo_24.05.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/MediaInfo
    pushd Project/GNU/CLI
            autoreconf -ifv
            ./configure $COMMON_CONFIG
            eval ${MAKE_AND_INSTALL}
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/MediaInfo
