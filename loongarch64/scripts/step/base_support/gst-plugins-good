source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=gst-plugins-good
export PACKAGE_VERSION=1.26.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/gst-plugins-good/1.26.0/
rm -rf ${BUILD_DIRECTORY}/gst-plugins-good-1.26.0
tar xvf ${DOWNLOADDIR}/gst-plugins-good-1.26.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gst-plugins-good-1.26.0
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gst-plugins-good-1.26.0
