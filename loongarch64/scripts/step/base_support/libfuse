source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libfuse
export PACKAGE_VERSION=fuse-3.16.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libfuse/fuse-3.16.1/
rm -rf ${BUILD_DIRECTORY}/libfuse-fuse-3.16.1
tar xvf ${DOWNLOADDIR}/libfuse-fuse-3.16.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libfuse-fuse-3.16.1
        
        mkdir cross-build
        pushd cross-build
                meson ${MESON_CONFIG} -Duseroot=false \
                      ..
		ninja
		export DESTDIR=${SYSROOT_DIR}
		ninja install                
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libfuse-fuse-3.16.1
