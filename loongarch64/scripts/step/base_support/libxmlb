source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libxmlb
export PACKAGE_VERSION=0.3.14
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libxmlb/0.3.14/
rm -rf ${BUILD_DIRECTORY}/libxmlb-0.3.14
tar xvf ${DOWNLOADDIR}/libxmlb-0.3.14.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxmlb-0.3.14
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libxmlb-0.3.14
