source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libbpf
export PACKAGE_VERSION=1.3.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libbpf/1.3.0/
rm -rf ${BUILD_DIRECTORY}/libbpf-1.3.0
tar xvf ${DOWNLOADDIR}/libbpf-1.3.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libbpf-1.3.0
	
	make -j${JOBS} CC="${CROSS_TARGET}-gcc" -C src
	make -C src DESTDIR=${SYSROOT_DIR} install
popd 
rm -rf ${BUILD_DIRECTORY}/libbpf-1.3.0
