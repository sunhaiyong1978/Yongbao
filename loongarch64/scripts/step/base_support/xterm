source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=xterm
export PACKAGE_VERSION=381
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/xterm/381/
rm -rf ${BUILD_DIRECTORY}/xterm-381
tar xvf ${DOWNLOADDIR}/xterm-381.tgz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/xterm-381
    sed -i '/v0/{n;s/new:/new:kb=^?:/}' termcap
    printf '\tkbs=\\177,\n' >> terminfo
    TERMINFO=/usr/share/terminfo \
    ./configure ${COMMON_CONFIG} --with-app-defaults=/etc/X11/app-defaults
    make -j${JOBS}
    make DESTDIR=${SYSROOT_DIR} install install-ti

cat >> ${SYSROOT_DIR}/etc/X11/app-defaults/XTerm << "EOF"
*VT100*locale: true
*VT100*faceName: Monospace
*VT100*faceSize: 10
*backarrowKeyIsErase: true
*ptyInitialErase: true
EOF
popd 
rm -rf ${BUILD_DIRECTORY}/xterm-381
