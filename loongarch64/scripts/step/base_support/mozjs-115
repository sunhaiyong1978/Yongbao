source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=mozjs-115
export PACKAGE_VERSION=115.9.1esr
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/mozjs-115/115.9.1esr/
rm -rf ${BUILD_DIRECTORY}/firefox-115.9.1
tar xvf ${DOWNLOADDIR}/firefox-115.9.1esr.source.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/firefox-115.9.1
    
    cp -a ${CROSSTOOLS_DIR}/lib/python$(get_package_version Python3)/site-packages/six{.py,-*} third_party/python/six/
    mkdir cross-build
    pushd cross-build
        CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
        ../js/src/configure --prefix=/usr --libdir=/usr/lib64 \
                    --target=${CROSS_TARGET} \
                    --with-intl-api --with-system-zlib --with-system-icu \
                    --disable-jemalloc --disable-debug-symbols --enable-readline
	eval ${MAKE_AND_INSTALL}
        rm -v ${SYSROOT_DIR}/usr/lib64/libjs_static.ajs
        sed -i '/@NSPR_CFLAGS@/d' ${SYSROOT_DIR}/usr/bin/js115-config
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/firefox-115.9.1
