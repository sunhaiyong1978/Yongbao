source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=fcitx5-chinese-addons
export PACKAGE_VERSION=5.1.10
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/fcitx5-chinese-addons/5.1.10/
rm -rf ${BUILD_DIRECTORY}/fcitx5-chinese-addons-5.1.10
tar xvf ${DOWNLOADDIR}/fcitx5-chinese-addons-5.1.10.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/fcitx5-chinese-addons-5.1.10
	cp ${RESOURCEDIR}/files/py_table-20121124.tar.gz modules/pinyinhelper/
	cp ${RESOURCEDIR}/files/py_stroke-20250329.tar.gz modules/pinyinhelper/
        
        sed -i "s@\${FCITX_INSTALL_CMAKECONFIG_DIR}@${SYSROOT_DIR}/usr/lib${LIB_SUFF}/cmake@g" CMakeLists.txt
	sed -i "s@COMMAND LibIME::pinyindict@COMMAND qemu-loongarch64 ${SYSROOT_DIR}/usr/bin/libime_pinyindict@g" im/pinyin/CMakeLists.txt
        mkdir cross-build
        pushd cross-build
                CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
                cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
                      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DBUILD_SHARED_LIBS=ON \
                      -DENABLE_OPENCC=OFF -DUSE_QT6=ON -DENABLE_BROWSER=OFF -Wno-dev ..
                eval ${MAKE_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/fcitx5-chinese-addons-5.1.10

set_final_fix_step "/usr/share/fcitx5/inputmethod/" "F" "f" "*.conf"
