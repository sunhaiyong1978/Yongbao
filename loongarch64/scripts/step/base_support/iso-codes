source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=iso-codes
export PACKAGE_VERSION=4.17.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/iso-codes/4.17.0/
rm -rf ${BUILD_DIRECTORY}/iso-codes-4.17.0
tar xvf ${DOWNLOADDIR}/iso-codes_4.17.0.orig.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/iso-codes-4.17.0
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG}  as_ln_s="ln -sf" --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
	run_step_package_check check
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/iso-codes-4.17.0
