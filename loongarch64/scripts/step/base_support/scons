source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=scons
export PACKAGE_VERSION=4.5.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/scons/4.5.2/
rm -rf ${BUILD_DIRECTORY}/SCons-4.5.2
tar xvf ${DOWNLOADDIR}/SCons-4.5.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/SCons-4.5.2
    ${CROSSTOOLS_DIR}/bin/python3 setup.py build
    ${CROSSTOOLS_DIR}/bin/python3 setup.py install \
             --optimize=1 --root=${SYSROOT_DIR} --prefix=/usr \
             --install-data=/usr/share/man/man1
popd 
rm -rf ${BUILD_DIRECTORY}/SCons-4.5.2
