source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=pcsc-lite
export PACKAGE_VERSION=2.0.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/pcsc-lite/2.0.0/
rm -rf ${BUILD_DIRECTORY}/pcsc-lite-2.0.0
tar xvf ${DOWNLOADDIR}/pcsc-lite-2.0.0.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pcsc-lite-2.0.0
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --with-systemdsystemunitdir=/usr/lib/systemd/system --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pcsc-lite-2.0.0
