source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=pcsc-lite
export PACKAGE_VERSION=2.3.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/pcsc-lite/2.3.1/
rm -rf ${BUILD_DIRECTORY}/pcsc-lite-2.3.1
tar xvf ${DOWNLOADDIR}/pcsc-lite-2.3.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pcsc-lite-2.3.1
	patch -Np1 -i ${SYSDIR}/files/base_support/pcsc-lite/2.3.1/patches/0001-pcsc-lite-2.2.1-fix-for-cross-build.patch 
	 
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pcsc-lite-2.3.1
