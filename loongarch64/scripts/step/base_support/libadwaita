source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libadwaita
export PACKAGE_VERSION=1.3.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libadwaita/1.3.5/
rm -rf ${BUILD_DIRECTORY}/libadwaita-1.3.5
tar xvf ${DOWNLOADDIR}/libadwaita-1.3.5.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libadwaita-1.3.5
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libadwaita-1.3.5
