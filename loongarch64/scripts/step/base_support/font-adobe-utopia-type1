source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=font-adobe-utopia-type1
export PACKAGE_VERSION=1.0.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/font-adobe-utopia-type1/1.0.5/
rm -rf ${BUILD_DIRECTORY}/font-adobe-utopia-type1-1.0.5
tar xvf ${DOWNLOADDIR}/font-adobe-utopia-type1-1.0.5.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/font-adobe-utopia-type1-1.0.5
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --with-fontrootdir=/usr/share/fonts/X11 --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
	run_step_package_check check
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/font-adobe-utopia-type1-1.0.5
