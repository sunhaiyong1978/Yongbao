source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libimobiledevice-glue
export PACKAGE_VERSION=1.3.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libimobiledevice-glue/1.3.1/
rm -rf ${BUILD_DIRECTORY}/libimobiledevice-glue-1.3.1
tar xvf ${DOWNLOADDIR}/libimobiledevice-glue-1.3.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libimobiledevice-glue-1.3.1
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} PACKAGE_VERSION=${PACKAGE_VERSION} --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
	run_step_package_check check
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libimobiledevice-glue-1.3.1
