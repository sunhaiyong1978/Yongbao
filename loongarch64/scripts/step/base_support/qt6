source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=qt6
export PACKAGE_VERSION=6.9.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/qt6/6.9.3/
rm -rf ${BUILD_DIRECTORY}/qt-everywhere-src-6.9.3
tar xvf ${DOWNLOADDIR}/qt-everywhere-src-6.9.3.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/qt-everywhere-src-6.9.3
	export PATH=${CROSSTOOLS_DIR}/qt6/bin:${PATH}
        patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0001-qt6-6.9.2-webengine-configure-add-loongarch64-suppor.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0002-qt-6.9.2-webengine-fix-loongarch64-define-because-ch.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0003-qt-6.9.2-webengine-chromium-add-some-define-for-loon.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0004-qt-6.9.2-webengine-fix-chromium-boringssl-openssl-ta.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0005-qtwebengine-6.9.2-crashpad-add-support-for-loongarch.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0006-qtwebengine-6.9.2-open-lsx-and-lasx-option-for-loong.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0008-qt-6.9.2-webengine-3rdparty-chromium-api-runtime-add.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0009-qt-6.9.2-webengine-3rdparty-chromium-enable-swiftsha.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0010-qtwebengine-fix-filename-too-long-error-for-use-ninj.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0001-qtwebengine-6.9.2-use-statx-for-sandbox-add-loongarc.patch -d qtwebengine/src/3rdparty/chromium 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0001-qtwebengine-6.9.0-fix-build-error-for-use-gcc.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0001-qtwebengine-6.9.0-chromium-skia-remove-lsx-support-f.patch 
	patch -Np1 -i ${SYSDIR}/files/base_support/qt6/6.9.3/patches/0001-qtwebengine-6.9.0-chromium-third_party-blink-remove-.patch 
	 
	sed -i "/unset PKG_CONFIG_PATH/s@unset PKG_CONFIG_PATH@export PKG_CONFIG_PATH=\\\\\"${CROSSTOOLS_DIR}/lib/pkgconfig:${CROSSTOOLS_DIR}/lib64/pkgconfig:${HOST_TOOLS_DIR}/lib64/pkgconfig:${HOST_TOOLS_DIR}/lib/pkgconfig:/usr/lib64/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig\\\\\"@g" qtwebengine/cmake/QtToolchainHelpers.cmake
	sed -i "/v8_enable_webassembly/s@=false@=true@g" qtwebengine/src/pdf/CMakeLists.txt

	sed -i "s@../lib/@@g" qtmultimedia/cmake/FindFFmpeg.cmake
	sed -i "s@llvm-10.0@llvm-16.0@g" qtwebengine/src/3rdparty/chromium/third_party/swiftshader/src/Reactor/BUILD.gn


	cp -a ${SYSROOT_DIR}/usr/include/{math,stdlib}.h ${SYSROOT_DIR}/usr/local/include/

	sed -i -e "/^if(/d" -e "/^endif/d" qtwebengine/examples/CMakeLists.txt

        mkdir -pv cross-build
        pushd cross-build
                CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
                cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
                      -DPython_EXECUTABLE=${HOST_TOOLS_DIR}/bin/python3 \
                      -DPython3_EXECUTABLE=${HOST_TOOLS_DIR}/bin/python3 \
                      -DPYTHON_EXECUTABLE=${HOST_TOOLS_DIR}/bin/python3 \
                      -DPYTHON3_EXECUTABLE=${HOST_TOOLS_DIR}/bin/python3 \
                      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DINSTALL_BINDIR=/usr/lib64/qt6/bin \
                      -DINSTALL_ARCHDATADIR=/usr/lib64/qt6 \
                      -DINSTALL_LIBDIR=/usr/lib64 \
                      -DINSTALL_QMLDIR=/usr/lib64/qml \
                      -DINSTALL_SYSCONFDIR=/etc/xdg \
                      -DINSTALL_PLUGINSDIR=/usr/lib64/qt6/plugins \
                      -DINSTALL_QMLDIR=/usr/lib64/qt6/qml \
                      -DINSTALL_DATADIR=/usr/share/qt6 \
                      -DINSTALL_DOCDIR=/usr/share/doc/qt6 \
                      -DINSTALL_TRANSLATIONSDIR=/usr/share/qt6/translations \
                      -DINSTALL_INCLUDEDIR=/usr/include/qt6 \
                      -DINSTALL_IMPORTDIR=/usr/lib64/qt6/imports \
                      -DINSTALL_MKSPECSDIR=/usr/lib64/qt6/mkspecs \
                      -DBUILD_SHARED_LIBS=ON \
		      -DQT_HOST_PATH=${CROSSTOOLS_DIR}/qt6 -DQT_FORCE_BUILD_TOOLS=ON \
		      -DQT_BUILD_SUBMODULES=qt3d\;qt5compat\;qtactiveqt\;qtbase\;qtcharts\;qtcoap\;qtconnectivity\;qtdatavis3d\;qtdeclarative\;qtdoc\;qthttpserver\;qtimageformats\;qtlanguageserver\;qtlocation\;qtlottie\;qtmqtt\;qtmultimedia\;qtnetworkauth\;qtopcua\;qtpositioning\;qtquick3d\;qtquickeffectmaker\;qtquicktimeline\;qtremoteobjects\;qtscxml\;qtsensors\;qtserialbus\;qtserialport\;qtshadertools\;qtspeech\;qtsvg\;qttools\;qttranslations\;qtvirtualkeyboard\;qtwayland\;qtwebchannel\;qtwebsockets\;qtwebview\;qtwebengine \
		      -DPKG_CONFIG_HOST_EXECUTABLE=/usr/bin/pkg-config \
		      -DFEATURE_webengine_system_ffmpeg:BOOL=ON  -DFEATURE_webengine_vaapi:BOOL=ON -DFEATURE_webengine_extensions:BOOL=ON -DFEATURE_webengine_printing_and_pdf:BOOL=ON -DFEATURE_webengine_proprietary_codecs:BOOL=ON -DFEATURE_webengine_webrtc:BOOL=ON -DFEATURE_webengine_webrtc_pipewire:BOOL=ON \
		      -DQT_FEATURE_use_lld_linker:BOOL=OFF \
		      -DFEATURE_qtpdf_build:BOOL=ON -DFEATURE_pdf_v8:BOOL=ON \
		      -DQT_GENERATE_SBOM=OFF \
                      -Wno-dev ..
                eval ${MAKE_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/qt-everywhere-src-6.9.3

cat > ${SYSROOT_DIR}/etc/profile.d/qt6.sh << "EOF"
export QT_PLUGIN_PATH=${QT_PLUGIN_PATH}:/usr/lib64/qt6/plugins
export QT_IMPORTS_DIR=${QT_IMPORTS_PATH}:/usr/lib64/qt6/qml
export QML2_IMPORT_PATH=${QML2_IMPORT_PATH}:/usr/lib64/qt6/qml
EOF
