source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libtraceevent
export PACKAGE_VERSION=1.8.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libtraceevent/1.8.6/
rm -rf ${BUILD_DIRECTORY}/libtraceevent-1.8.6
tar xvf ${DOWNLOADDIR}/libtraceevent-1.8.6.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libtraceevent-1.8.6
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libtraceevent-1.8.6
