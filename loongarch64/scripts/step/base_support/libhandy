source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libhandy
export PACKAGE_VERSION=1.8.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libhandy/1.8.2/
rm -rf ${BUILD_DIRECTORY}/libhandy-1.8.2
tar xvf ${DOWNLOADDIR}/libhandy-1.8.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libhandy-1.8.2
	
	mkdir cross-prebuild
	pushd cross-prebuild
		meson ${MESON_CONFIG}  -Dintrospection=disabled \
		       ..
		eval ${NINJA_AND_INSTALL}
	popd
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  -Dintrospection=enabled \
                      ..
		sed -i -e "s@\(${SYSROOT_DIR}/\)usr\(.*\)/\(g-ir-compiler\|g-ir-scanner\|vapigen\)@${CROSSTOOLS_DIR}/\2/${CROSS_TARGET}-\3@g" build.ninja
                sed -i -e "s@\(${CROSSTOOLS_DIR}/\)bin/\(g-ir-compiler\|g-ir-scanner\|vapigen\)@\1bin/${CROSS_TARGET}-\2@g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libhandy-1.8.2
