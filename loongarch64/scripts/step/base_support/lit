source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=lit
export PACKAGE_VERSION=16.0.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/lit/16.0.3/
rm -rf ${BUILD_DIRECTORY}/lit-16.0.3
tar xvf ${DOWNLOADDIR}/lit-16.0.3.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/lit-16.0.3
    ${CROSSTOOLS_DIR}/bin/python3 setup.py build
    ${CROSSTOOLS_DIR}/bin/python3 setup.py install --root=${SYSROOT_DIR} --prefix=/usr
    sed -i "s@${CROSSTOOLS_DIR}@@g" ${SYSROOT_DIR}/bin/lit
popd 
rm -rf ${BUILD_DIRECTORY}/lit-16.0.3
