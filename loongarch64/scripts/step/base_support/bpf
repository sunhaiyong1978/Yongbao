source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=bpf
export PACKAGE_VERSION=6.15
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/bpf/6.15/
rm -rf ${BUILD_DIRECTORY}/linux-6.15
tar xvf ${DOWNLOADDIR}/linux-6.15.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/linux-6.15
	
	pushd tools/bpf
		unset CFLAGS
		make -j${JOBS} HOSTCC="gcc" LDFLAGS="" ARCH=${ARCH_FAMILY} CROSS_COMPILE=${CROSS_TARGET}- bpftool
		cp -a bpftool/bpftool ${SYSROOT_DIR}/usr/bin/
	popd
popd 
rm -rf ${BUILD_DIRECTORY}/linux-6.15
