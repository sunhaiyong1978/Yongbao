source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=xscreensaver
export PACKAGE_VERSION=6.08
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/xscreensaver/6.08/
rm -rf ${BUILD_DIRECTORY}/xscreensaver-6.08
tar xvf ${DOWNLOADDIR}/xscreensaver-6.08.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/xscreensaver-6.08
    patch -Np1 -i ${SYSDIR}/files/base_support/xscreensaver/6.08/patches/0001-xscreensaver-fix-for-cross-build.patch 
	 
    cp ${SYSROOT_DIR}/usr/share/automake-*/config.* ./
    ./configure $COMMON_CONFIG --includedir=${SYSROOT_DIR}/usr/include
    make -j${JOBS} GTK_DATADIR=/usr/share GLIB_COMPILE_RESOURCES=${CROSSTOOLS_DIR}/bin/${CROSS_TARGET}-glib-compile-resources
    make install_prefix=${SYSROOT_DIR} GTK_DATADIR=/usr/share install
popd 
rm -rf ${BUILD_DIRECTORY}/xscreensaver-6.08

cat > ${SYSROOT_DIR}/etc/pam.d/xscreensaver << "EOF"
## Begin /etc/pam.d/xscreensaver

auth    include system-auth
account include system-account

## End /etc/pam.d/xscreensaver
EOF
