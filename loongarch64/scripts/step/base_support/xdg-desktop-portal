source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=xdg-desktop-portal
export PACKAGE_VERSION=1.19.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/xdg-desktop-portal/1.19.1/
rm -rf ${BUILD_DIRECTORY}/xdg-desktop-portal-1.19.1
tar xvf ${DOWNLOADDIR}/xdg-desktop-portal-1.19.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/xdg-desktop-portal-1.19.1
	patch -Np1 -i ${SYSDIR}/files/base_support/xdg-desktop-portal/1.19.1/patches/0001-xdg-desktop-portal-disable-tests-for-cross-build.patch 
	 
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/xdg-desktop-portal-1.19.1
