source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=xf86-video-fbdev
export PACKAGE_VERSION=0.5.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/xf86-video-fbdev/0.5.0/
rm -rf ${BUILD_DIRECTORY}/xf86-video-fbdev-0.5.0
tar xvf ${DOWNLOADDIR}/xf86-video-fbdev-0.5.0.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/xf86-video-fbdev-0.5.0
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG}  --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
	run_step_package_check check
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/xf86-video-fbdev-0.5.0
