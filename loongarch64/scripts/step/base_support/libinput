source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libinput
export PACKAGE_VERSION=1.24.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libinput/1.24.0/
rm -rf ${BUILD_DIRECTORY}/libinput-1.24.0
tar xvf ${DOWNLOADDIR}/libinput-1.24.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libinput-1.24.0
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} -Ddebug-gui=false -Dtests=false -Ddocumentation=false \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libinput-1.24.0
