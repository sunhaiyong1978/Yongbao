source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libsoup
export PACKAGE_VERSION=3.6.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libsoup/3.6.3/
rm -rf ${BUILD_DIRECTORY}/libsoup-3.6.3
tar xvf ${DOWNLOADDIR}/libsoup-3.6.3.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libsoup-3.6.3
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} -Dvapi=enabled -Dgssapi=disabled -Dsysprof=disabled -Ddocs=disabled \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libsoup-3.6.3
