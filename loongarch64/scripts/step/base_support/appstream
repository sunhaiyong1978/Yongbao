source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=appstream
export PACKAGE_VERSION=1.0.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/appstream/1.0.2/
rm -rf ${BUILD_DIRECTORY}/appstream-1.0.2
tar xvf ${DOWNLOADDIR}/appstream-1.0.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/appstream-1.0.2
	patch -Np1 -i ${SYSDIR}/files/base_support/appstream/1.0.2/patches/0001-appstream-1.0.0-fix-for-cross-build.patch 
	 
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} -Dstemming=false \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/appstream-1.0.2
