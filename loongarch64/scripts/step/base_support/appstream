source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=appstream
export PACKAGE_VERSION=0.16.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/appstream/0.16.3/
rm -rf ${BUILD_DIRECTORY}/appstream-0.16.3
tar xvf ${DOWNLOADDIR}/appstream-0.16.3.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/appstream-0.16.3
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} -Dstemming=false \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/appstream-0.16.3
