source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=xdg-user-dirs
export PACKAGE_VERSION=0.19
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/xdg-user-dirs/0.19/
rm -rf ${BUILD_DIRECTORY}/xdg-user-dirs-0.19
tar xvf ${DOWNLOADDIR}/xdg-user-dirs-0.19.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/xdg-user-dirs-0.19
	patch -Np1 -i ${SYSDIR}/files/base_support/xdg-user-dirs/0.19/patches/0001-xdg-user-dirs-0.19-fix-systemd-user-dir-for-cross-bu.patch 
	 
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}*.la
popd 
rm -rf ${BUILD_DIRECTORY}/xdg-user-dirs-0.19
