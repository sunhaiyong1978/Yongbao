source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=fltk
export PACKAGE_VERSION=1.3.8
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/fltk/1.3.8/
rm -rf ${BUILD_DIRECTORY}/fltk-1.3.8
tar xvf ${DOWNLOADDIR}/fltk-1.3.8-source.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/fltk-1.3.8
    sed -i "/^DIRS/s@test@@g" Makefile
    ./configure ${COMMON_CONFIG} --enable-shared
    eval ${MAKE_AND_INSTALL}
    cp -v ${SYSROOT_DIR}/usr/bin/fltk-config ${CROSSTOOLS_DIR}/bin/
popd 
rm -rf ${BUILD_DIRECTORY}/fltk-1.3.8
