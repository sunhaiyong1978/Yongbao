source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=pango
export PACKAGE_VERSION=1.56.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/pango/1.56.0/
rm -rf ${BUILD_DIRECTORY}/pango-1.56.0
tar xvf ${DOWNLOADDIR}/pango-1.56.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pango-1.56.0
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  --wrap-mode=nofallback -Dintrospection=enabled \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pango-1.56.0
