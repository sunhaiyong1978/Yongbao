source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=pytest-runner
export PACKAGE_VERSION=6.0.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/pytest-runner/6.0.1/
rm -rf ${BUILD_DIRECTORY}/pytest-runner-6.0.1
tar xvf ${DOWNLOADDIR}/pytest-runner-6.0.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pytest-runner-6.0.1
	
	_PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        _PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --ignore-installed --no-user pytest-runner --root=${SYSROOT_DIR} --prefix=/usr
popd 
rm -rf ${BUILD_DIRECTORY}/pytest-runner-6.0.1
