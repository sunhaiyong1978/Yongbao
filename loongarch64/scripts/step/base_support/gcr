source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=gcr
export PACKAGE_VERSION=4.3.90.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/gcr/4.3.90.3/
rm -rf ${BUILD_DIRECTORY}/gcr-4.3.90.3
tar xvf ${DOWNLOADDIR}/gcr-4.3.90.3.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gcr-4.3.90.3
	patch -Np1 -i ${SYSDIR}/files/base_support/gcr/4.3.90.3/patches/0001-gcr-fix-systemd-dir-for-cross-build.patch 
	 
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gcr-4.3.90.3
