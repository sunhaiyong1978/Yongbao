source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=libmediainfo
export PACKAGE_VERSION=25.09
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/libmediainfo/25.09/
rm -rf ${BUILD_DIRECTORY}/MediaInfoLib
tar xvf ${DOWNLOADDIR}/libmediainfo_25.09.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/MediaInfoLib
    pushd Project/GNU/Library
	    autoreconf -ifv
	    ./configure $COMMON_CONFIG --enable-shared \
        	        --enable-visibility --with-libcurl --with-libmms
	    eval ${MAKE_AND_INSTALL}
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/MediaInfoLib
