source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=v4l-utils
export PACKAGE_VERSION=1.26.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/v4l-utils/1.26.1/
rm -rf ${BUILD_DIRECTORY}/v4l-utils-1.26.1
tar xvf ${DOWNLOADDIR}/v4l-utils-1.26.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/v4l-utils-1.26.1
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} -Dudevdir=/usr/lib/udev -Dsystemdsystemunitdir=/usr/lib/systemd/system -Dgconv=disabled \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/v4l-utils-1.26.1
