source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=glean-parser
export PACKAGE_VERSION=11.0.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/glean-parser/11.0.1/
rm -rf ${BUILD_DIRECTORY}/glean_parser-11.0.1
tar xvf ${DOWNLOADDIR}/glean_parser-11.0.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/glean_parser-11.0.1
	patch -Np1 -i ${SYSDIR}/files/base_support/glean-parser/11.0.1/patches/0001-glean_parser-remove-precise_timestamps-args.patch 
	 
	_PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        _PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --ignore-installed --no-user glean-parser --root=${SYSROOT_DIR} --prefix=/usr
popd 
rm -rf ${BUILD_DIRECTORY}/glean_parser-11.0.1
