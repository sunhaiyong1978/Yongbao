source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=hatch-vcs
export PACKAGE_VERSION=0.3.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/hatch-vcs/0.3.0/
rm -rf ${BUILD_DIRECTORY}/hatch_vcs-0.3.0
tar xvf ${DOWNLOADDIR}/hatch_vcs-0.3.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/hatch_vcs-0.3.0
	
	_PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        _PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --ignore-installed --no-user hatch-vcs --root=${SYSROOT_DIR} --prefix=/usr
popd 
rm -rf ${BUILD_DIRECTORY}/hatch_vcs-0.3.0
