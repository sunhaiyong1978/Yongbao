source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=pipewire
export PACKAGE_VERSION=0.3.83
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/pipewire/0.3.83/
rm -rf ${BUILD_DIRECTORY}/pipewire-0.3.83
tar xvf ${DOWNLOADDIR}/pipewire-0.3.83.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pipewire-0.3.83
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} -Dsession-managers="[]" -Dffmpeg=enabled -Dsystemd-user-unit-dir=/usr/lib/systemd/user \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pipewire-0.3.83
