source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=unifont
export PACKAGE_VERSION=17.0.02
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/unifont/17.0.02/
rm -rf ${BUILD_DIRECTORY}/unifont-17.0.02
tar xvf ${DOWNLOADDIR}/unifont-17.0.02.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/unifont-17.0.02
	make -j${JOBS}
	pushd font
		make ttf
	popd
	mkdir -pv ${SYSROOT_DIR}/usr/share/fonts/truetype/unifont/
	cp -av font/compiled/unifont-17.0.02.ttf ${SYSROOT_DIR}/usr/share/fonts/truetype/unifont/unifont.ttf
popd 
rm -rf ${BUILD_DIRECTORY}/unifont-17.0.02
