source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=cpp-httplib
export PACKAGE_VERSION=0.18.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/cpp-httplib/0.18.5/
rm -rf ${BUILD_DIRECTORY}/cpp-httplib-0.18.5
tar xvf ${DOWNLOADDIR}/cpp-httplib-0.18.5.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/cpp-httplib-0.18.5
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}*.la
popd 
rm -rf ${BUILD_DIRECTORY}/cpp-httplib-0.18.5
