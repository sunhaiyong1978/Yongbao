source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=flac
export PACKAGE_VERSION=1.4.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/flac/1.4.2/
rm -rf ${BUILD_DIRECTORY}/flac-1.4.2
tar xvf ${DOWNLOADDIR}/flac-1.4.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/flac-1.4.2
	
	autoreconf -if
	./configure ${COMMON_CONFIG} --with-ogg-includes=${SYSROOT_DIR}/usr/include
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/flac-1.4.2
