source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=perf
export PACKAGE_VERSION=6.15
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/perf/6.15/
rm -rf ${BUILD_DIRECTORY}/linux-6.15
tar xvf ${DOWNLOADDIR}/linux-6.15.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/linux-6.15
	
	pushd tools/perf
		make -j${JOBS} ARCH=${ARCH_FAMILY} CROSS_COMPILE=${CROSS_TARGET}- EXTRA_CFLAGS="-Wno-error=aggressive-loop-optimizations" NO_LIBTRACEEVENT=1
		cp -a perf ${SYSROOT_DIR}/usr/bin/
	popd
popd 
rm -rf ${BUILD_DIRECTORY}/linux-6.15
