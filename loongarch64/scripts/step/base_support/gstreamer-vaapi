source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=gstreamer-vaapi
export PACKAGE_VERSION=1.24.11
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/gstreamer-vaapi/1.24.11/
rm -rf ${BUILD_DIRECTORY}/gstreamer-vaapi-1.24.11
tar xvf ${DOWNLOADDIR}/gstreamer-vaapi-1.24.11.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gstreamer-vaapi-1.24.11
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG}  \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gstreamer-vaapi-1.24.11
