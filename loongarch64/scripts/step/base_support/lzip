source env/base_support/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=base_support
export STEP_PACKAGENAME=lzip
export PACKAGE_VERSION=1.24
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/base_support/lzip/1.24/
rm -rf ${BUILD_DIRECTORY}/lzip-1.24
tar xvf ${DOWNLOADDIR}/lzip-1.24.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/lzip-1.24
	./configure CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" --prefix=/usr
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/lzip-1.24
