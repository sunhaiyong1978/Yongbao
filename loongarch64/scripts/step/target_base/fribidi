source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=fribidi
export PACKAGE_VERSION=1.0.14
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/fribidi/1.0.14/
rm -rf ${BUILD_DIRECTORY}/fribidi-1.0.14
tar xvf ${DOWNLOADDIR}/fribidi-1.0.14.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/fribidi-1.0.14
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} -Ddocs=false \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/fribidi-1.0.14
