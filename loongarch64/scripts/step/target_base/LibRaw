source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=LibRaw
export PACKAGE_VERSION=0.21.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/LibRaw/0.21.3/
rm -rf ${BUILD_DIRECTORY}/LibRaw-0.21.3
tar xvf ${DOWNLOADDIR}/LibRaw-0.21.3.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/LibRaw-0.21.3
    autoreconf -ifv
    ./configure ${COMMON_CONFIG} \
                --enable-jpeg --enable-jasper --enable-lcms
    eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/LibRaw-0.21.3
