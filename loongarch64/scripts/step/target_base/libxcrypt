source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=libxcrypt
export PACKAGE_VERSION=4.5.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/libxcrypt/4.5.2/
rm -rf ${BUILD_DIRECTORY}/libxcrypt-4.5.2
tar xvf ${DOWNLOADDIR}/libxcrypt-4.5.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxcrypt-4.5.2
	patch -Np1 -i ${SYSDIR}/files/target_base/libxcrypt/4.5.2/patches/0001-fix-configure-error-under-loongarch64-architecture.patch 
	 
	for config_i in $(find -name "config.sub")
	do
		chmod 0644 $(dirname ${config_i})/config.{sub,guess}
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	CFLAGS="${CFLAGS} -Wno-error=stringop-overread" ./configure ${COMMON_CONFIG} --disable-werror --enable-malloc0returnsnull
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
	run_step_package_check check
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libxcrypt-4.5.2
