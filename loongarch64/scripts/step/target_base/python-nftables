source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=python-nftables
export PACKAGE_VERSION=1.1.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/python-nftables/1.1.1/
rm -rf ${BUILD_DIRECTORY}/nftables-1.1.1
tar xvf ${DOWNLOADDIR}/nftables-1.1.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/nftables-1.1.1
	pushd py
		_PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
		_PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET} ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --ignore-installed --no-user nftables --root=${SYSROOT_DIR} --prefix=/usr
	popd
popd 
rm -rf ${BUILD_DIRECTORY}/nftables-1.1.1
