source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=binutils
export PACKAGE_VERSION=2.43.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/binutils/2.43.1/
rm -rf ${BUILD_DIRECTORY}/binutils-2.43.1
tar xvf ${DOWNLOADDIR}/binutils-2.43.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/binutils-2.43.1
	patch -Np1 -i ${SYSDIR}/files/target_base/binutils/2.43.1/patches/RESEND-LoongArch-Default-to-a-maximum-page-size-of-64KiB.patch 
	 
	rm -rf gdb* libdecnumber readline sim
	mkdir -pv cross-build
	pushd cross-build
		../configure --prefix=/usr --libdir=/usr/lib64 --build=${CROSS_HOST} \
		             --host=${CROSS_TARGET} --enable-shared --disable-werror \
		             --with-system-zlib --enable-64-bit-bfd
		make -j${JOBS} tooldir=/usr
		make DESTDIR=${SYSROOT_DIR} tooldir=/usr install
	popd
popd 
rm -rf ${BUILD_DIRECTORY}/binutils-2.43.1
