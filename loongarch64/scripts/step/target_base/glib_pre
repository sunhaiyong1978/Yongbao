source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=glib_pre
export PACKAGE_VERSION=2.80.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/glib_pre/2.80.2/
rm -rf ${BUILD_DIRECTORY}/glib-2.80.2
tar xvf ${DOWNLOADDIR}/glib-2.80.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/glib-2.80.2
        
        mkdir cross-build
        pushd cross-build
                meson ${MESON_CONFIG} --default-library=both -Dtests=false -Dman=true -Dselinux=disabled -Dintrospection=disabled \
                      ..
                eval ${NINJA_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/glib-2.80.2
