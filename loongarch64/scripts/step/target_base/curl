source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=curl
export PACKAGE_VERSION=8.0.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/curl/8.0.1/
rm -rf ${BUILD_DIRECTORY}/curl-8.0.1
tar xvf ${DOWNLOADDIR}/curl-8.0.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/curl-8.0.1
	./configure --prefix=/usr --libdir=/usr/lib64 --build=${CROSS_HOST} \
                --host=${CROSS_TARGET} --with-openssl \
                --enable-threaded-resolver --with-ca-path=/etc/ssl/certs
	eval ${MAKE_AND_INSTALL}
	cp ${SYSROOT_DIR}/usr/bin/curl-config ${CROSSTOOLS_DIR}/bin/
popd 
rm -rf ${BUILD_DIRECTORY}/curl-8.0.1
