source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=libgusb
export PACKAGE_VERSION=0.4.8
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/libgusb/0.4.8/
rm -rf ${BUILD_DIRECTORY}/libgusb-0.4.8
tar xvf ${DOWNLOADDIR}/libgusb-0.4.8.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libgusb-0.4.8
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  -Ddocs=false \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libgusb-0.4.8
