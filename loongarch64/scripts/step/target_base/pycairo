source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=pycairo
export PACKAGE_VERSION=1.29.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/pycairo/1.29.0/
rm -rf ${BUILD_DIRECTORY}/pycairo-1.29.0
tar xvf ${DOWNLOADDIR}/pycairo-1.29.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pycairo-1.29.0
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} -Dpython=${CROSS_TARGET}-python3 \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pycairo-1.29.0
