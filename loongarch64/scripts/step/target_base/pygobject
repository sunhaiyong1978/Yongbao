source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=pygobject
export PACKAGE_VERSION=3.55.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/pygobject/3.55.0/
rm -rf ${BUILD_DIRECTORY}/pygobject-3.55.0
tar xvf ${DOWNLOADDIR}/pygobject-3.55.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pygobject-3.55.0
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} -Dtests=false \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pygobject-3.55.0
