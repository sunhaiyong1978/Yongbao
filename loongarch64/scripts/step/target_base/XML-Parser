source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=XML-Parser
export PACKAGE_VERSION=2.46
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/XML-Parser/2.46/
rm -rf ${BUILD_DIRECTORY}/XML-Parser-2.46
tar xvf ${DOWNLOADDIR}/XML-Parser-2.46.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/XML-Parser-2.46
    ${CROSSTOOLS_DIR}/bin/perl Makefile.PL CC=${CROSS_TARGET}-gcc LD=${CROSS_TARGET}-ld
    sed -i "/^INSTALL/s@${CROSSTOOLS_DIR}@/usr@g" Makefile Expat/Makefile
    sed -i "/^PERL_INC/s@${CROSSTOOLS_DIR}@${SYSROOT_DIR}/usr@g" Makefile Expat/Makefile
    sed -i "/^LDDLFLAGS/s@/usr/local/lib@${SYSROOT_DIR}/usr/lib64@g" Makefile Expat/Makefile
    eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/XML-Parser-2.46
