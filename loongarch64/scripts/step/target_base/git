source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=git
export PACKAGE_VERSION=2.51.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/git/2.51.0/
rm -rf ${BUILD_DIRECTORY}/git-2.51.0
tar xvf ${DOWNLOADDIR}/git-2.51.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/git-2.51.0
    ./configure ${COMMON_CONFIG} \
                --with-gitconfig=/etc/gitconfig --with-python=${CROSS_TARGET}-python3 --without-iconv \
                 ac_cv_fread_reads_directories=yes ac_cv_snprintf_returns_bogus=no
    make -j${JOBS}
    make DESTDIR=${SYSROOT_DIR} perllibdir=$(perl -V:installsitelib | grep -o "'.*'" | sed "s@'@@g" | sed "s@${HOST_TOOLS_DIR}@/usr@g") install
popd 
rm -rf ${BUILD_DIRECTORY}/git-2.51.0
