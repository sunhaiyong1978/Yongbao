source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=kbd
export PACKAGE_VERSION=2.5.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/kbd/2.5.1/
rm -rf ${BUILD_DIRECTORY}/kbd-2.5.1
tar xvf ${DOWNLOADDIR}/kbd-2.5.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/kbd-2.5.1
	patch -Np1 -i ${SYSDIR}/files/target_base/kbd/2.5.1/patches/0001-Save-font-support-UTF-8.patch 
	 
	sed -i '/RESIZECONS_PROGS=/s/yes/no/' configure
	sed -i 's/resizecons.8 //' docs/man/man8/Makefile.in
	autoreconf -ifv
	./configure --prefix=/usr --build=${CROSS_HOST} --host=${CROSS_TARGET} --disable-vlock
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/kbd-2.5.1
