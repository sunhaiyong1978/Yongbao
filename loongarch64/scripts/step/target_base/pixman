source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=pixman
export PACKAGE_VERSION=0.46.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/pixman/0.46.4/
rm -rf ${BUILD_DIRECTORY}/pixman-0.46.4
tar xvf ${DOWNLOADDIR}/pixman-0.46.4.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pixman-0.46.4
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pixman-0.46.4
