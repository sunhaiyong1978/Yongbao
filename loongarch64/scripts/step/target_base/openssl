source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=openssl
export PACKAGE_VERSION=3.5.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/openssl/3.5.2/
rm -rf ${BUILD_DIRECTORY}/openssl-3.5.2
tar xvf ${DOWNLOADDIR}/openssl-3.5.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/openssl-3.5.2
	CC="${CROSS_TARGET}-gcc" \
	./Configure --prefix=/usr --openssldir=/etc/ssl \
				--libdir=lib${LIB_SUFF} shared zlib linux64-loongarch64
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/openssl-3.5.2
