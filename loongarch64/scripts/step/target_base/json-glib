source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=json-glib
export PACKAGE_VERSION=1.6.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/json-glib/1.6.6/
rm -rf ${BUILD_DIRECTORY}/json-glib-1.6.6
tar xvf ${DOWNLOADDIR}/json-glib-1.6.6.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/json-glib-1.6.6
	
	mkdir cross-prebuild
	pushd cross-prebuild
		meson ${MESON_CONFIG}  -Dintrospection=disabled \
		       ..
		eval ${NINJA_AND_INSTALL}
	popd
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  \
                      ..
		sed -i -e "s@\(${SYSROOT_DIR}/\)usr\(.*\)/\(g-ir-compiler\|g-ir-scanner\)@${CROSSTOOLS_DIR}/\2${CROSS_TARGET}-\3@g" build.ninja
		sed -i -e "s@\(${SYSDIR}/\)cross-tools/bin/vapigen@\1cross-tools/bin/${CROSS_TARGET}-vapigen@g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/json-glib-1.6.6
