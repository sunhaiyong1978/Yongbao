source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=gnupg
export PACKAGE_VERSION=2.4.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/gnupg/2.4.3/
rm -rf ${BUILD_DIRECTORY}/gnupg-2.4.3
tar xvf ${DOWNLOADDIR}/gnupg-2.4.3.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gnupg-2.4.3
	
	for config_i in $(find -name "config.sub")
	do
		chmod 0644 $(dirname ${config_i})/config.{sub,guess}
		cp ${CROSSTOOLS_DIR}/share/automake*/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} GPG_ERROR_CONFIG=${CROSSTOOLS_DIR}/bin/gpg-error-config GPGRT_CONFIG=${CROSSTOOLS_DIR}/bin/gpgrt-config
	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gnupg-2.4.3
