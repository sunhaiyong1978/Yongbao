source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=openjpeg
export PACKAGE_VERSION=2.5.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/openjpeg/2.5.0/
rm -rf ${BUILD_DIRECTORY}/openjpeg-2.5.0
tar xvf ${DOWNLOADDIR}/openjpeg-2.5.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/openjpeg-2.5.0
        
	mkdir cross-build
	pushd cross-build
        	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
		cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
		      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 \
       		      -DCMAKE_INSTALL_PREFIX=/usr -DOPENJPEG_INSTALL_LIB_DIR=lib64 -Wno-dev ..
		eval ${MAKE_AND_INSTALL}
	popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/openjpeg-2.5.0
