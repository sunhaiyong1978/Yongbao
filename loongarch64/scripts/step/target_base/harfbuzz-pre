source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=harfbuzz-pre
export PACKAGE_VERSION=7.3.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/harfbuzz-pre/7.3.0/
rm -rf ${BUILD_DIRECTORY}/harfbuzz-7.3.0
tar xvf ${DOWNLOADDIR}/harfbuzz-7.3.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/harfbuzz-7.3.0
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} -Dbenchmark=disabled -Dintrospection=enabled -Dgraphite2=disabled \
                      ..
		sed -i -e "s@\(${SYSROOT_DIR}/\)usr\(.*\)/\(g-ir-compiler\|g-ir-scanner\)@${CROSSTOOLS_DIR}/\2${CROSS_TARGET}-\3@g" build.ninja
		sed -i -e "s@\(${SYSDIR}/\)cross-tools/bin/vapigen@\1cross-tools/bin/${CROSS_TARGET}-vapigen@g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/harfbuzz-7.3.0
