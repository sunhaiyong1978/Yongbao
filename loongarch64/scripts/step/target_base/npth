source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=npth
export PACKAGE_VERSION=1.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/npth/1.6/
rm -rf ${BUILD_DIRECTORY}/npth-1.6
tar xvf ${DOWNLOADDIR}/npth-1.6.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/npth-1.6
        
        for config_i in $(find -name "config.sub")
        do
                cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
         ./configure ${COMMON_CONFIG}  --enable-malloc0returnsnull
        CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
	cp -a ${SYSROOT_DIR}/usr/bin/npth-config ${CROSSTOOLS_DIR}/bin/
	sed -i "/^prefix/s@=\/usr@=${SYSROOT_DIR}\/usr@g" ${CROSSTOOLS_DIR}/bin/npth-config
	sed -i "/^libs/s@-L\/usr@-L${SYSROOT_DIR}\/usr@g" ${CROSSTOOLS_DIR}/bin/npth-config
popd 
rm -rf ${BUILD_DIRECTORY}/npth-1.6
