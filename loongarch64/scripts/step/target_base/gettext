source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=gettext
export PACKAGE_VERSION=0.22.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/gettext/0.22.5/
rm -rf ${BUILD_DIRECTORY}/gettext-0.22.5
tar xvf ${DOWNLOADDIR}/gettext-0.22.5.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gettext-0.22.5
	sed -i "/hello-c++-kde/d" gettext-tools/examples/Makefile.in
	for config_i in $(find -name "config.sub")
        do
                cp ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
        done
	./configure ${COMMON_CONFIG} \
	            --with-libncurses-prefix=${SYSROOT_DIR}
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/gettext-0.22.5
