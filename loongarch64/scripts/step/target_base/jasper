source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=jasper
export PACKAGE_VERSION=4.2.8
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/jasper/4.2.8/
rm -rf ${BUILD_DIRECTORY}/jasper-version-4.2.8
tar xvf ${DOWNLOADDIR}/jasper-4.2.8.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/jasper-version-4.2.8
        
	mkdir cross-build
	pushd cross-build
        	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++"  \
		cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
		      -DCMAKE_INSTALL_LIBDIR=/usr/lib${LIB_SUFF} \
       		      -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_SKIP_INSTALL_RPATH=YES -DJAS_CROSSCOMPILING=True -DJAS_STDC_VERSION=201710L -DJAS_ENABLE_DOC=NO -DALLOW_IN_SOURCE_BUILD=ON -Wno-dev ..
		eval ${MAKE_AND_INSTALL}
	popd
        rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/jasper-version-4.2.8
