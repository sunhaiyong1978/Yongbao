source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=libcap
export PACKAGE_VERSION=2.68
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/libcap/2.68/
rm -rf ${BUILD_DIRECTORY}/libcap-2.68
tar xvf ${DOWNLOADDIR}/libcap-2.68.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libcap-2.68
	make -j${JOBS} CROSS_COMPILE="${CROSS_TARGET}-" BUILD_CC="gcc" GOLANG=no prefix=/usr lib=lib64
	make CROSS_COMPILE="${CROSS_TARGET}-" BUILD_CC="gcc" GOLANG=no prefix=/usr lib=lib64 \
		 DESTDIR=${SYSROOT_DIR} install
popd 
rm -rf ${BUILD_DIRECTORY}/libcap-2.68
