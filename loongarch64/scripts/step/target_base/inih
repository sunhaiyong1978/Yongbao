source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=inih
export PACKAGE_VERSION=r61
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/inih/r61/
rm -rf ${BUILD_DIRECTORY}/inih-r61
tar xvf ${DOWNLOADDIR}/inih-r61.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/inih-r61
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/inih-r61
