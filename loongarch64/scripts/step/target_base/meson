source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=meson
export PACKAGE_VERSION=1.2.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/meson/1.2.1/
rm -rf ${BUILD_DIRECTORY}/meson-1.2.1
tar xvf ${DOWNLOADDIR}/meson-1.2.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/meson-1.2.1
    ${CROSSTOOLS_DIR}/bin/python3 setup.py build
    ${CROSSTOOLS_DIR}/bin/python3 setup.py install --root=${SYSROOT_DIR} --prefix=/usr
    sed -i "s@${CROSSTOOLS_DIR}@@g" ${SYSROOT_DIR}/bin/meson
popd 
rm -rf ${BUILD_DIRECTORY}/meson-1.2.1
