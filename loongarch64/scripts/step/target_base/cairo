source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=cairo
export PACKAGE_VERSION=1.18.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/cairo/1.18.4/
rm -rf ${BUILD_DIRECTORY}/cairo-1.18.4
tar xvf ${DOWNLOADDIR}/cairo-1.18.4.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/cairo-1.18.4
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/cairo-1.18.4
