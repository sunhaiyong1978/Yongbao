source env/target_base/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=target_base
export STEP_PACKAGENAME=pciutils
export PACKAGE_VERSION=3.11.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/target_base/pciutils/3.11.1/
rm -rf ${BUILD_DIRECTORY}/pciutils-3.11.1
tar xvf ${DOWNLOADDIR}/pciutils-3.11.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pciutils-3.11.1
	make -j${JOBS} CROSS_COMPILE="${CROSS_TARGET}-" HOST="${CROSS_TARGET}" \
	     PREFIX=/usr SHARED=yes LIBDIR=/usr/lib64
	make CROSS_COMPILE="${CROSS_TARGET}-" HOST="${CROSS_TARGET}" \
	     PREFIX=/usr SHARED=yes LIBDIR=/usr/lib64 STRIP="" \
	     DESTDIR=${SYSROOT_DIR} install install-lib
popd 
rm -rf ${BUILD_DIRECTORY}/pciutils-3.11.1
