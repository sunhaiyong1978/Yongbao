source env/wine64_runtime/config
source env/distro.info
source env/function.sh
source env/wine64_runtime/custom
export STEP_BUILDNAME=wine64_runtime
export STEP_PACKAGENAME=ffmpeg
export PACKAGE_VERSION=git-default
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine64_runtime/ffmpeg/git-default/
rm -rf ${BUILD_DIRECTORY}/ffmpeg-git-default_git
tar xvf ${DOWNLOADDIR}/ffmpeg-git-default_git.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/ffmpeg-git-default_git
	
	LDFLAGS="${LDFLAGS} -Wl,-rpath-link=${X86_64_SYSROOT_DIR}/usr/lib${LIB_SUFF}/pulseaudio" \
	./configure --prefix=/usr --libdir=/usr/lib${LIB_SUFF} \
                --cross-prefix=${CROSS_TARGET}- --sysroot=${X86_64_SYSROOT_DIR} \
                --enable-gpl         \
                --enable-version3    \
                --enable-nonfree     \
                --disable-static     \
                --enable-shared      \
                --disable-debug      \
                --enable-libass      \
                --enable-libfdk-aac  \
                --enable-libfreetype \
                --enable-libmp3lame  \
                --enable-libopus     \
                --enable-libtheora   \
                --enable-libvorbis   \
                --enable-libvpx      \
                --enable-libx264     \
                --enable-libx265     \
                --enable-openssl --enable-libpulse --enable-libdrm --enable-vulkan \
                --arch=${ARCH_NAME} --target-os=linux --cc=${CROSS_TARGET}-gcc --host-cc=gcc
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/ffmpeg-git-default_git
