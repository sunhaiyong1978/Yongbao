source env/wine64_runtime/config
source env/distro.info
source env/function.sh
source env/wine64_runtime/custom
export STEP_BUILDNAME=wine64_runtime
export STEP_PACKAGENAME=llvm-project
export PACKAGE_VERSION=17.0.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine64_runtime/llvm-project/17.0.6/
rm -rf ${BUILD_DIRECTORY}/llvm-project-17.0.6.src
tar xvf ${DOWNLOADDIR}/llvm-project-17.0.6.src.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/llvm-project-17.0.6.src
    
    pushd llvm
    mkdir cross-build
    pushd cross-build
        CC="${X86_64_HOST}-gcc" CXX="${X86_64_HOST}-g++" \
        cmake .. -G Ninja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release \
              -DBUILD_SHARED_LIBS:BOOL=OFF -DLLVM_ENABLE_LIBCXX:BOOL=OFF \
              -DLLVM_LIBDIR_SUFFIX=64 \
              -DCMAKE_C_FLAGS="-DNDEBUG" -DCMAKE_CXX_FLAGS="-DNDEBUG" \
              -DLLVM_BUILD_RUNTIME:BOOL=ON -DLLVM_ENABLE_RTTI:BOOL=ON \
              -DLLVM_ENABLE_ZLIB:BOOL=ON -DLLVM_ENABLE_FFI:BOOL=ON \
              -DLLVM_ENABLE_TERMINFO:BOOL=OFF \
              -DLLVM_TABLEGEN:PATH=${SYSDIR}/cross-toolchains/llvm-project/bin/llvm-tblgen \
              -DLLVM_BUILD_LLVM_DYLIB:BOOL=ON \
              -DLLVM_LINK_LLVM_DYLIB:BOOL=ON -DLLVM_BUILD_EXTERNAL_COMPILER_RT:BOOL=ON \
              -DLLVM_INSTALL_TOOLCHAIN_ONLY:BOOL=OFF \
              -DLLVM_DEFAULT_TARGET_TRIPLE=${X86_64_HOST}
	eval ${NINJA_AND_INSTALL}
    popd
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/llvm-project-17.0.6.src

cat > ${SYSDIR}/cross-toolchains/llvm-project/bin/${X86_64_HOST}-llvm-config << EOF
#!/bin/bash -e
qemu-${QEMU_ARCH} ${X86_64_SYSROOT_DIR}/usr/bin/llvm-config "\$@"
EOF
chmod +x ${SYSDIR}/cross-toolchains/llvm-project/bin/${X86_64_HOST}-llvm-config
