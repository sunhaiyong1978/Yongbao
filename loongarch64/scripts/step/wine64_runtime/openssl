source env/wine64_runtime/config
source env/distro.info
source env/function.sh
source env/wine64_runtime/custom
export STEP_BUILDNAME=wine64_runtime
export STEP_PACKAGENAME=openssl
export PACKAGE_VERSION=3.1.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine64_runtime/openssl/3.1.4/
rm -rf ${BUILD_DIRECTORY}/openssl-3.1.4
tar xvf ${DOWNLOADDIR}/openssl-3.1.4.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/openssl-3.1.4
	CC="${X86_64_HOST}-gcc" \
	./Configure --prefix=/usr --openssldir=/etc/ssl \
				--libdir=lib64 shared zlib
	sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/openssl-3.1.4
