source env/wine64_runtime/config
source env/distro.info
source env/function.sh
source env/wine64_runtime/custom
export STEP_BUILDNAME=wine64_runtime
export STEP_PACKAGENAME=cryptsetup
export PACKAGE_VERSION=2.7.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine64_runtime/cryptsetup/2.7.0/
rm -rf ${BUILD_DIRECTORY}/cryptsetup-2.7.0
tar xvf ${DOWNLOADDIR}/cryptsetup-2.7.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/cryptsetup-2.7.0
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --disable-asciidoc --disable-ssh-token --with-tmpfilesdir=/usr/lib/tmpfiles.d --enable-malloc0returnsnull
	CC="${X86_64_HOST}-gcc" CXX="${X86_64_HOST}-g++" make -j${JOBS}
        make DESTDIR=${X86_64_SYSROOT_DIR} install
	rm -f ${X86_64_SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/cryptsetup-2.7.0
