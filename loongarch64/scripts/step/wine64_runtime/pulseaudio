source env/wine64_runtime/config
source env/distro.info
source env/function.sh
source env/wine64_runtime/custom
export STEP_BUILDNAME=wine64_runtime
export STEP_PACKAGENAME=pulseaudio
export PACKAGE_VERSION=17.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine64_runtime/pulseaudio/17.0/
rm -rf ${BUILD_DIRECTORY}/pulseaudio-17.0
tar xvf ${DOWNLOADDIR}/pulseaudio-17.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pulseaudio-17.0
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} --default-library=both -Ddatabase=gdbm -Dbluez5=disabled -Dsystemduserunitdir=/usr/lib/systemd/user \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${X86_64_SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pulseaudio-17.0
