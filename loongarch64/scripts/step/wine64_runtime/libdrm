source env/wine64_runtime/config
source env/distro.info
source env/function.sh
source env/wine64_runtime/custom
export STEP_BUILDNAME=wine64_runtime
export STEP_PACKAGENAME=libdrm
export PACKAGE_VERSION=2.4.118
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine64_runtime/libdrm/2.4.118/
rm -rf ${BUILD_DIRECTORY}/libdrm-2.4.118
tar xvf ${DOWNLOADDIR}/libdrm-2.4.118.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libdrm-2.4.118
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} --default-library=both -Detnaviv=enabled -Dudev=true -Dintel=enabled \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${X86_64_SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libdrm-2.4.118
