source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=glibc_localedata
export PACKAGE_VERSION=2.38
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/glibc_localedata/2.38/
rm -rf ${BUILD_DIRECTORY}/glibc-2.38
tar xvf ${DOWNLOADDIR}/glibc-2.38.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/glibc-2.38
        mkdir -p build-locale
        pushd build-locale
		export CFLAGS=""
		export LDFLAGS=""
                ../configure --prefix=/usr --libdir=/usr/lib${LIB_SUFF} --libexecdir=/usr/lib${LIB_SUFF}/glibc \
                         --enable-stack-protector=strong --enable-add-ons \
                         --disable-werror libc_cv_slibdir=/usr/lib${LIB_SUFF}
                make -j${JOBS}
                make -j${JOBS} DESTDIR=${X86_SYSROOT_DIR} localedata/install-locales
popd 
rm -rf ${BUILD_DIRECTORY}/glibc-2.38
