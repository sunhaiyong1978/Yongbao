source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=libffi
export PACKAGE_VERSION=3.4.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/libffi/3.4.6/
rm -rf ${BUILD_DIRECTORY}/libffi-3.4.6
tar xvf ${DOWNLOADDIR}/libffi-3.4.6.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libffi-3.4.6
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --disable-static --with-gcc-arch=native --enable-malloc0returnsnull
	CC="${X86_HOST}-gcc" CXX="${X86_HOST}-g++" make -j${JOBS}
        make DESTDIR=${X86_SYSROOT_DIR} install
	rm -f ${X86_SYSROOT_DIR}/usr/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libffi-3.4.6
