source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=openssl
export PACKAGE_VERSION=3.1.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/openssl/3.1.3/
rm -rf ${BUILD_DIRECTORY}/openssl-3.1.3
tar xvf ${DOWNLOADDIR}/openssl-3.1.3.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/openssl-3.1.3
	CC="${X86_HOST}-gcc" \
	./Configure --prefix=/usr --openssldir=/etc/ssl \
				--libdir=lib${LIB_SUFF} shared zlib linux-x86
	sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/openssl-3.1.3
