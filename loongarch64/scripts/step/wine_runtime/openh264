source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=openh264
export PACKAGE_VERSION=2.4.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/openh264/2.4.0/
rm -rf ${BUILD_DIRECTORY}/openh264-2.4.0
tar xvf ${DOWNLOADDIR}/openh264-2.4.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/openh264-2.4.0
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} --default-library=both  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${X86_SYSROOT_DIR}/usr/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/openh264-2.4.0
