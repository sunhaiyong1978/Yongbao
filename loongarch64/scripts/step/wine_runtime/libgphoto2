source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=libgphoto2
export PACKAGE_VERSION=2.5.31
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/libgphoto2/2.5.31/
rm -rf ${BUILD_DIRECTORY}/libgphoto2-2.5.31
tar xvf ${DOWNLOADDIR}/libgphoto2-2.5.31.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libgphoto2-2.5.31
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG}  --enable-malloc0returnsnull
	CC="${X86_HOST}-gcc" CXX="${X86_HOST}-g++" make -j${JOBS}
        make DESTDIR=${X86_SYSROOT_DIR} install
	rm -f ${X86_SYSROOT_DIR}/usr/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libgphoto2-2.5.31
