source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=libdrm
export PACKAGE_VERSION=2.4.120
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/libdrm/2.4.120/
rm -rf ${BUILD_DIRECTORY}/libdrm-2.4.120
tar xvf ${DOWNLOADDIR}/libdrm-2.4.120.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libdrm-2.4.120
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} --default-library=both -Detnaviv=enabled -Dudev=true -Dintel=enabled \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${X86_SYSROOT_DIR}/usr/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libdrm-2.4.120
