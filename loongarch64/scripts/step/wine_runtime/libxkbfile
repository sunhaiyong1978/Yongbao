source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=libxkbfile
export PACKAGE_VERSION=1.1.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/libxkbfile/1.1.2/
rm -rf ${BUILD_DIRECTORY}/libxkbfile-1.1.2
tar xvf ${DOWNLOADDIR}/libxkbfile-1.1.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxkbfile-1.1.2
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG}  --enable-malloc0returnsnull
	CC="${X86_HOST}-gcc" CXX="${X86_HOST}-g++" make -j${JOBS}
        make DESTDIR=${X86_SYSROOT_DIR} install
	rm -f ${X86_SYSROOT_DIR}/usr/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libxkbfile-1.1.2
