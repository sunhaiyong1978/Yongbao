source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=bash
export PACKAGE_VERSION=5.2.15
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/bash/5.2.15/
rm -rf ${BUILD_DIRECTORY}/bash-5.2.15
tar xvf ${DOWNLOADDIR}/bash-5.2.15.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/bash-5.2.15
cat > config.cache << "EOF"
	ac_cv_func_mmap_fixed_mapped=yes
	ac_cv_func_strcoll_works=yes
	ac_cv_func_working_mktime=yes
	bash_cv_func_sigsetjmp=present
	bash_cv_getcwd_malloc=yes
	bash_cv_job_control_missing=present
	bash_cv_printf_a_format=yes
	bash_cv_sys_named_pipes=present
	bash_cv_ulimit_maxfds=yes
	bash_cv_under_sys_siglist=yes
	bash_cv_unusable_rtsigs=no
	gt_cv_int_divbyzero_sigfpe=yes
	ac_cv_func_arc4random=no
EOF
	
	./configure --prefix=/usr --libdir=/usr/lib${LIB_SUFF} --build=${CROSS_HOST} \
	            --host=${X86_HOST} --without-bash-malloc \
	            --with-installed-readline --cache-file=config.cache
	eval ${MAKE_AND_INSTALL}
	ln -sfv bash ${X86_SYSROOT_DIR}/bin/sh
popd 
rm -rf ${BUILD_DIRECTORY}/bash-5.2.15
