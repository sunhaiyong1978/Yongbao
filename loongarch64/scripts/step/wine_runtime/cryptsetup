source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=cryptsetup
export PACKAGE_VERSION=2.6.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/cryptsetup/2.6.1/
rm -rf ${BUILD_DIRECTORY}/cryptsetup-2.6.1
tar xvf ${DOWNLOADDIR}/cryptsetup-2.6.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/cryptsetup-2.6.1
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --disable-asciidoc --disable-ssh-token --with-tmpfilesdir=/usr/lib/tmpfiles.d --enable-malloc0returnsnull
	CC="${X86_HOST}-gcc" CXX="${X86_HOST}-g++" make -j${JOBS}
        make DESTDIR=${X86_SYSROOT_DIR} install
	rm -f ${X86_SYSROOT_DIR}/usr/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/cryptsetup-2.6.1
