source env/wine_runtime/config
source env/distro.info
source env/function.sh
source env/wine_runtime/custom
export STEP_BUILDNAME=wine_runtime
export STEP_PACKAGENAME=gst-plugins-base
export PACKAGE_VERSION=1.22.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wine_runtime/gst-plugins-base/1.22.5/
rm -rf ${BUILD_DIRECTORY}/gst-plugins-base-1.22.5
tar xvf ${DOWNLOADDIR}/gst-plugins-base-1.22.5.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gst-plugins-base-1.22.5
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG} --default-library=both  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${X86_SYSROOT_DIR}/usr/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gst-plugins-base-1.22.5
