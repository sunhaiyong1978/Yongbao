source env/toolchain/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=toolchain
export STEP_PACKAGENAME=mingw-zlib
export PACKAGE_VERSION=1.3.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/toolchain/mingw-zlib/1.3.1/
rm -rf ${BUILD_DIRECTORY}/zlib-1.3.1
tar xvf ${DOWNLOADDIR}/zlib-1.3.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/zlib-1.3.1
	
	MINGW_HOST=$(archname_to_triple "$(get_user_set_env target ${MINGW_HOST})" "${MINGW_HOST}")
	PATH=${TOOLCHAIN_DIRECTORY}/cross-target/${MINGW_HOST}/cross-tools/bin:${PATH}

	CROSS_PREFIX=${MINGW_HOST}- ./configure --prefix=/mingw --static
	make -j${JOBS}
	INSTALL_DIST_DIR="${TOOLCHAIN_DIRECTORY}/cross-target/${MINGW_HOST}/cross-tools/target"
	make DESTDIR=${INSTALL_DIST_DIR} install
popd 
rm -rf ${BUILD_DIRECTORY}/zlib-1.3.1
