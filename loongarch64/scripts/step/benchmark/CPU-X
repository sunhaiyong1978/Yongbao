source env/benchmark/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=benchmark
export STEP_PACKAGENAME=CPU-X
export PACKAGE_VERSION=5.4.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/benchmark/CPU-X/5.4.0/
rm -rf ${BUILD_DIRECTORY}/CPU-X-5.4.0
tar xvf ${DOWNLOADDIR}/CPU-X-5.4.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/CPU-X-5.4.0
        
	sed -i "/POLKIT_ACTION_DIR STREQUAL \"\"/d" data/CMakeLists.txt
        mkdir cross-build
        pushd cross-build
                CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
                cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DBUILD_SHARED_LIBS=ON \
		      -DPOLKIT_ACTION_DIR=/usr/share/polkit-1/actions \
                      -DWITH_BANDWIDTH=OFF -Wno-dev ..
                eval ${MAKE_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/CPU-X-5.4.0
