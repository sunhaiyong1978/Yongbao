source env/wm-lxde/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=wm-lxde
export STEP_PACKAGENAME=lxinput
export PACKAGE_VERSION=0.3.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/wm-lxde/lxinput/0.3.5/
rm -rf ${BUILD_DIRECTORY}/lxinput-0.3.5
tar xvf ${DOWNLOADDIR}/lxinput-0.3.5.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/lxinput-0.3.5
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --enable-gtk3
	make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/lxinput-0.3.5
