pushd ${BUILD_DIRECTORY}/po4a-0.70
	
        ${CROSSTOOLS_DIR}/bin/perl Build.PL
	./Build
	./Build install
popd 
rm -rf ${BUILD_DIRECTORY}/po4a-0.70
