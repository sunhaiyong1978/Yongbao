source env/cross-tools/config
source env/distro.info
source env/function.sh
source env/cross-tools/custom
export STEP_BUILDNAME=cross-tools
export STEP_PACKAGENAME=qt6
export PACKAGE_VERSION=6.5.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/cross-tools/qt6/6.5.3/
rm -rf ${BUILD_DIRECTORY}/qt-everywhere-src-6.5.3
tar xvf ${DOWNLOADDIR}/qt-everywhere-src-6.5.3.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/qt-everywhere-src-6.5.3
	mkdir -p native-build
	pushd native-build
		cmake -DCMAKE_INSTALL_PREFIX=${CROSSTOOLS_DIR}/qt6 \
		      -DCMAKE_BUILD_TYPE=RELEASE \
		      -DQT_BUILD_SUBMODULES=qtbase\;qtshadertools\;qtdeclarative\;qt3d\;qtquick3d\;qttools\;qtremoteobjects\;qtscxml\;qtwayland\;qtmultimedia \
		      ..
		eval ${MAKE_AND_INSTALL}
	popd
popd 
rm -rf ${BUILD_DIRECTORY}/qt-everywhere-src-6.5.3
