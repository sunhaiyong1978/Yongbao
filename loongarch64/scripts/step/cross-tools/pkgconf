source env/cross-tools/config
source env/distro.info
source env/function.sh
source env/cross-tools/custom
export STEP_BUILDNAME=cross-tools
export STEP_PACKAGENAME=pkgconf
export PACKAGE_VERSION=2.1.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/cross-tools/pkgconf/2.1.0/
rm -rf ${BUILD_DIRECTORY}/pkgconf-2.1.0
tar xvf ${DOWNLOADDIR}/pkgconf-2.1.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pkgconf-2.1.0
        
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
        ./configure --prefix=${CROSSTOOLS_DIR} --build=${CROSS_HOST} \
                --host=${CROSS_HOST} --target=${CROSS_TARGET}
        eval ${MAKE_AND_INSTALL}
	mkdir -p ${CROSSTOOLS_DIR}/tmp/bin
        cp -f ${CROSSTOOLS_DIR}/bin/pkgconf ${CROSSTOOLS_DIR}/tmp/bin/${CROSS_TARGET}-pkg-config
	ln -sf pkgconf ${CROSSTOOLS_DIR}/bin/${CROSS_TARGET}-pkg-config
popd 
rm -rf ${BUILD_DIRECTORY}/pkgconf-2.1.0
