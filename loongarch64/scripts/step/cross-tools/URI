pushd ${BUILD_DIRECTORY}/URI-5.21
	
	${CROSSTOOLS_DIR}/bin/perl Makefile.PL
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/URI-5.21
