source env/cross-toolchains/config
source env/distro.info
source env/function.sh
source env/cross-toolchains/custom
export STEP_BUILDNAME=cross-toolchains
export STEP_PACKAGENAME=mingw-binutils
export PACKAGE_VERSION=2.45.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/cross-toolchains/mingw-binutils/2.45.1/
rm -rf ${BUILD_DIRECTORY}/binutils-2.45.1
tar xvf ${DOWNLOADDIR}/binutils-2.45.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/binutils-2.45.1
	MINGW_HOST=$(archname_to_triple "$(get_user_set_env target ${MINGW_HOST})" "${MINGW_HOST}")

	rm -rf gdb* libdecnumber readline sim
	mkdir -p tools-build
	pushd tools-build
    		CC=gcc AR=ar AS=as \
		../configure --prefix=${PREFIX}/${MINGW_HOST} --build=${CROSS_HOST} --host=${CROSS_HOST} \
	                     --target=${MINGW_HOST} 
	    	make -j${JOBS} configure-host
    		make -j${JOBS}
		make install-strip
	popd
popd 
rm -rf ${BUILD_DIRECTORY}/binutils-2.45.1
