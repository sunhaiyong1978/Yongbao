source env/cross-toolchains/config
source env/distro.info
source env/function.sh
source env/cross-toolchains/custom
export STEP_BUILDNAME=cross-toolchains
export STEP_PACKAGENAME=clang
export PACKAGE_VERSION=18.1.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/cross-toolchains/clang/18.1.3/
rm -rf ${BUILD_DIRECTORY}/llvm-project-18.1.3.src
tar xvf ${DOWNLOADDIR}/llvm-project-18.1.3.src.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/llvm-project-18.1.3.src
pushd clang
    mkdir -p native-build
    pushd native-build
	export PATH=${PREFIX}/llvm-project/bin:${PATH}
	LDFLAGS="-Wl,-rpath-link=${CROSSTOOLS_DIR}/lib:${CROSSTOOLS_DIR}/lib64:${CROSSTOOLS_DIR}/build-tools/lib64 -Wl,-rpath=${CROSSTOOLS_DIR}/lib:${CROSSTOOLS_DIR}/lib64:${CROSSTOOLS_DIR}/build-tools/lib64" \
	PKG_CONFIG_SYSROOT_DIR="" \
        cmake .. -G Ninja -DCMAKE_INSTALL_PREFIX:PATH=${PREFIX}/llvm-project \
                 -DCMAKE_CXX_COMPILER="g++" -DCMAKE_C_COMPILER="gcc" \
		 -DLLVM_CMAKE_DIR=${SYSDIR}/cross-toolchains/llvm-project/lib64/cmake \
		 -DLLVM_CONFIG=${SYSDIR}/cross-toolchains/llvm-project/bin/llvm-config \
                 -DBUILD_SHARED_LIBS:BOOL=OFF \
                 -DCMAKE_BUILD_TYPE=Release \
                 -DCMAKE_INSTALL_RPATH="${PREFIX}/llvm-project/lib64;${CROSSTOOLS_DIR}/build-tools/lib64;\\\${ORIGIN}/../lib64" \
                 -DCMAKE_C_FLAGS="-DNDEBUG" -DCMAKE_CXX_FLAGS="-DNDEBUG" \
                 -DLLVM_LIBDIR_SUFFIX=64  \
		 -DLLVM_INCLUDE_TESTS=OFF \
                 -DLLVM_INSTALL_TOOLCHAIN_ONLY:BOOL=OFF
        ninja
        ninja install
        cp -av bin/clang-tblgen ${PREFIX}/llvm-project/bin/
popd
popd 
rm -rf ${BUILD_DIRECTORY}/llvm-project-18.1.3.src
