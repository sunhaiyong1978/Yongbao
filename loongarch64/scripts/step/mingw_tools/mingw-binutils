source env/mingw_tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=mingw_tools
export STEP_PACKAGENAME=mingw-binutils
export PACKAGE_VERSION=2.40
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/mingw_tools/mingw-binutils/2.40/
rm -rf ${BUILD_DIRECTORY}/binutils-2.40
tar xvf ${DOWNLOADDIR}/binutils-2.40.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/binutils-2.40
	rm -rf gdb* libdecnumber readline sim
	mkdir -p tools-build
	pushd tools-build
    	CC=gcc AR=ar AS=as CFLAGS=$([[ $(gcc -dumpversion) -ge 13 ]] && echo "${CFLAGS} -Wno-error=dangling-pointer" || echo "${CFLAGS}") \
	    ../configure --prefix=${CROSS_TOOLS_PREFIX} --build=${CROSS_HOST} --host=${CROSS_HOST} \
	                 --target=${MINGW_HOST} --with-sysroot=${CROSS_TOOLS_PREFIX}/sys-root --disable-nls \
	                 --disable-static
    	make -j${JOBS} configure-host
    	make -j${JOBS}
    	make install-strip
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/binutils-2.40
