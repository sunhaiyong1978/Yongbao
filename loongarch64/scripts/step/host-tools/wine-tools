source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=wine-tools
export PACKAGE_VERSION=6.0.4-default
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/wine-tools/6.0.4-default/
rm -rf ${BUILD_DIRECTORY}/wine-6.0.4
tar xvf ${DOWNLOADDIR}/wine-6.0.4.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/wine-6.0.4
        
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
        ./configure ${COMMON_CONFIG} --enable-win64 --without-x
	make __tooldeps__
	mkdir -p ${CROSSTOOLS_DIR}/wine-tools
	cp -a ${PWD}/* ${CROSSTOOLS_DIR}/wine-tools/
popd 
rm -rf ${BUILD_DIRECTORY}/wine-6.0.4
