source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=jsonschema-specifications
export PACKAGE_VERSION=2023.11.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/jsonschema-specifications/2023.11.2/
rm -rf ${BUILD_DIRECTORY}/jsonschema_specifications-2023.11.2
tar xvf ${DOWNLOADDIR}/jsonschema_specifications-2023.11.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/jsonschema_specifications-2023.11.2
	
	${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user jsonschema-specifications
popd 
rm -rf ${BUILD_DIRECTORY}/jsonschema_specifications-2023.11.2
