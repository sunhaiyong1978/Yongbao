source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=lxml
export PACKAGE_VERSION=5.3.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/lxml/5.3.0/
rm -rf ${BUILD_DIRECTORY}/lxml-lxml-5.3.0
tar xvf ${DOWNLOADDIR}/lxml-5.3.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/lxml-lxml-5.3.0
	
	${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user lxml
popd 
rm -rf ${BUILD_DIRECTORY}/lxml-lxml-5.3.0
