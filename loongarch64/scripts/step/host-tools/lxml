source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=lxml
export PACKAGE_VERSION=6.0.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/lxml/6.0.2/
rm -rf ${BUILD_DIRECTORY}/lxml-lxml-6.0.2
tar xvf ${DOWNLOADDIR}/lxml-6.0.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/lxml-lxml-6.0.2
	
	CFLAGS="${CFLAGS} -Wno-incompatible-pointer-types"
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
	${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user lxml                                                             
popd 
rm -rf ${BUILD_DIRECTORY}/lxml-lxml-6.0.2
