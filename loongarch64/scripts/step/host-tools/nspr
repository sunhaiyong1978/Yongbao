source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=nspr
export PACKAGE_VERSION=4.38.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/nspr/4.38.2/
rm -rf ${BUILD_DIRECTORY}/nspr-4.38.2
tar xvf ${DOWNLOADDIR}/nspr-4.38.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/nspr-4.38.2
    pushd nspr
    patch -Np2 -i ${SYSDIR}/files/host-tools/nspr/4.38.2/patches/nspr-4.32-add-loongarch64.patch 
	 
    for config_i in $(find -name "config.sub")
    do
            cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
    done
    ./configure ${COMMON_CONFIG} \
                --with-mozilla --with-pthreads --enable-64bit
    make CC="gcc" CFLAGS="" -C config
    eval ${MAKE_AND_INSTALL}
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/nspr-4.38.2
