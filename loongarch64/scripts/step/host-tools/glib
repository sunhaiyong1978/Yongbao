source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=glib
export PACKAGE_VERSION=2.77.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/glib/2.77.2/
rm -rf ${BUILD_DIRECTORY}/glib-2.77.2
tar xvf ${DOWNLOADDIR}/glib-2.77.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/glib-2.77.2
    
    mkdir -p native-build
    pushd native-build
        meson --prefix=${CROSSTOOLS_DIR} --default-library=both \
              --buildtype=release ..
        ninja
        ninja install
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/glib-2.77.2
