source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=cbindgen
export PACKAGE_VERSION=0.26.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/cbindgen/0.26.0/
rm -rf ${BUILD_DIRECTORY}/cbindgen-0.26.0
tar xvf ${DOWNLOADDIR}/cbindgen-0.26.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/cbindgen-0.26.0
    cargo build --release
    install -Dm755 target/release/cbindgen ${CROSSTOOLS_DIR}/bin/
popd 
rm -rf ${BUILD_DIRECTORY}/cbindgen-0.26.0
