source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=asciidoctor
export PACKAGE_VERSION=2.0.22
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/asciidoctor/2.0.22/
rm -rf ${BUILD_DIRECTORY}/asciidoctor-2.0.22
tar xvf ${DOWNLOADDIR}/asciidoctor-2.0.22.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/asciidoctor-2.0.22
	gem build asciidoctor.gemspec
	gem install asciidoctor-2.0.22.gem
popd 
rm -rf ${BUILD_DIRECTORY}/asciidoctor-2.0.22
