source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=urllib3
export PACKAGE_VERSION=1.26.15-default
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/urllib3/1.26.15-default/
rm -rf ${BUILD_DIRECTORY}/urllib3-1.26.15
tar xvf ${DOWNLOADDIR}/urllib3-1.26.15.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/urllib3-1.26.15
	
	${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user urllib3
popd 
rm -rf ${BUILD_DIRECTORY}/urllib3-1.26.15
