source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=urllib3
export PACKAGE_VERSION=2.3.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/urllib3/2.3.0/
rm -rf ${BUILD_DIRECTORY}/urllib3-2.3.0
tar xvf ${DOWNLOADDIR}/urllib3-2.3.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/urllib3-2.3.0
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user urllib3
popd 
rm -rf ${BUILD_DIRECTORY}/urllib3-2.3.0
