source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=platformdirs
export PACKAGE_VERSION=4.5.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/platformdirs/4.5.0/
rm -rf ${BUILD_DIRECTORY}/platformdirs-4.5.0
tar xvf ${DOWNLOADDIR}/platformdirs-4.5.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/platformdirs-4.5.0
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user platformdirs
popd 
rm -rf ${BUILD_DIRECTORY}/platformdirs-4.5.0
