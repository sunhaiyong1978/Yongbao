source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=libxkbcommon
export PACKAGE_VERSION=1.6.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/libxkbcommon/1.6.0/
rm -rf ${BUILD_DIRECTORY}/libxkbcommon-1.6.0
tar xvf ${DOWNLOADDIR}/libxkbcommon-1.6.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxkbcommon-1.6.0
    
    mkdir -p native-build
    pushd native-build
        meson --prefix=${CROSSTOOLS_DIR} --libdir=${CROSSTOOLS_DIR}/lib${LIB_SUFF} -Denable-wayland=false \
              --buildtype=release ..
        ninja
        ninja install
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/libxkbcommon-1.6.0
