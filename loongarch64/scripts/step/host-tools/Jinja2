source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=Jinja2
export PACKAGE_VERSION=3.1.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/Jinja2/3.1.5/
rm -rf ${BUILD_DIRECTORY}/jinja2-3.1.5
tar xvf ${DOWNLOADDIR}/jinja2-3.1.5.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/jinja2-3.1.5
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user Jinja2
popd 
rm -rf ${BUILD_DIRECTORY}/jinja2-3.1.5
