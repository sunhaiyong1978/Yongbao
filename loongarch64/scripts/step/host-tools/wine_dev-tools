source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=wine_dev-tools
export PACKAGE_VERSION=8.18
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/wine_dev-tools/8.18/
rm -rf ${BUILD_DIRECTORY}/wine-8.18
tar xvf ${DOWNLOADDIR}/wine-8.18.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/wine-8.18
        
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
        ./configure ${COMMON_CONFIG} --enable-win64 --without-x
	make __tooldeps__
	mkdir -p ${CROSSTOOLS_DIR}/wine_dev-tools
	cp -a ${PWD}/* ${CROSSTOOLS_DIR}/wine_dev-tools/
popd 
rm -rf ${BUILD_DIRECTORY}/wine-8.18
