source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=rpds-py
export PACKAGE_VERSION=0.30.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/rpds-py/0.30.0/
rm -rf ${BUILD_DIRECTORY}/rpds_py-0.30.0
tar xvf ${DOWNLOADDIR}/rpds_py-0.30.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/rpds_py-0.30.0
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user rpds-py
popd 
rm -rf ${BUILD_DIRECTORY}/rpds_py-0.30.0
