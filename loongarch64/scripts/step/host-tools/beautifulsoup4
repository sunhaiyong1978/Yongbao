source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=beautifulsoup4
export PACKAGE_VERSION=4.13.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/beautifulsoup4/4.13.3/
rm -rf ${BUILD_DIRECTORY}/beautifulsoup4-4.13.3
tar xvf ${DOWNLOADDIR}/beautifulsoup4-4.13.3.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/beautifulsoup4-4.13.3
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user beautifulsoup4
popd 
rm -rf ${BUILD_DIRECTORY}/beautifulsoup4-4.13.3
