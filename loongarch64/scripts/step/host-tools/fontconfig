source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=fontconfig
export PACKAGE_VERSION=2.17.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/fontconfig/2.17.1/
rm -rf ${BUILD_DIRECTORY}/fontconfig-2.17.1
tar xvf ${DOWNLOADDIR}/fontconfig-2.17.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/fontconfig-2.17.1
	
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
	 ./configure --prefix=${PREFIX} --libdir=${PREFIX}/lib${LIB_SUFF} --disable-docs
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/fontconfig-2.17.1
