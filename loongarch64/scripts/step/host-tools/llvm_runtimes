source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=llvm_runtimes
export PACKAGE_VERSION=18.1.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/llvm_runtimes/18.1.6/
rm -rf ${BUILD_DIRECTORY}/llvm-project-18.1.6.src
tar xvf ${DOWNLOADDIR}/llvm-project-18.1.6.src.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/llvm-project-18.1.6.src
    pushd runtimes
        mkdir host-build
        pushd host-build
	    export PATH=${CROSSTOOLS_DIR}/host-llvm-project/bin:$PATH
            cmake .. -G Ninja -DCMAKE_INSTALL_PREFIX:PATH=${CROSSTOOLS_DIR}/host-llvm-project \
                  -DCMAKE_CXX_COMPILER="clang++" -DCMAKE_C_COMPILER="clang" \
		  -DCMAKE_BUILD_TYPE=Release \
                  -DLLVM_CONFIG=${CROSSTOOLS_DIR}/host-llvm-project/bin/llvm-config \
                  -DCMAKE_C_FLAGS="-DNDEBUG" -DCMAKE_CXX_FLAGS="-DNDEBUG" \
		  -DLLVM_ENABLE_RUNTIMES="libunwind;libcxxabi;pstl;libcxx;compiler-rt" \
		  -DLLVM_RUNTIME_TARGETS="x86_64-unknown-linux-gnu;loongarch64-unknown-linux-gnu"
                  -DLLVM_LINK_LLVM_DYLIB:BOOL=ON
            ninja
            ninja install
        popd
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/llvm-project-18.1.6.src
