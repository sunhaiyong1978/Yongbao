source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=scons
export PACKAGE_VERSION=4.9.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/scons/4.9.0/
rm -rf ${BUILD_DIRECTORY}/scons-4.9.0
tar xvf ${DOWNLOADDIR}/SCons-4.9.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/scons-4.9.0
	
	${HOST_TOOLS_DIR}/bin/python3 setup.py build
        ${HOST_TOOLS_DIR}/bin/python3 setup.py install
popd 
rm -rf ${BUILD_DIRECTORY}/scons-4.9.0
