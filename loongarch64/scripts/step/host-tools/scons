source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=scons
export PACKAGE_VERSION=4.8.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/scons/4.8.1/
rm -rf ${BUILD_DIRECTORY}/scons-4.8.1
tar xvf ${DOWNLOADDIR}/SCons-4.8.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/scons-4.8.1
	
	${CROSSTOOLS_DIR}/bin/python3 setup.py build
        ${CROSSTOOLS_DIR}/bin/python3 setup.py install
 #       ${CROSSTOOLS_DIR}/bin/python3 setup.py install --optimize=1
popd 
rm -rf ${BUILD_DIRECTORY}/scons-4.8.1
