source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=libfyaml
export PACKAGE_VERSION=0.9
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/libfyaml/0.9/
rm -rf ${BUILD_DIRECTORY}/libfyaml-0.9
tar xvf ${DOWNLOADDIR}/libfyaml-0.9.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libfyaml-0.9
	
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
	 ./configure --prefix=${PREFIX} --libdir=${PREFIX}/lib${LIB_SUFF} 
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/libfyaml-0.9
