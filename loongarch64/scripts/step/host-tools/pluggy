source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=pluggy
export PACKAGE_VERSION=1.4.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/pluggy/1.4.0/
rm -rf ${BUILD_DIRECTORY}/pluggy-1.4.0
tar xvf ${DOWNLOADDIR}/pluggy-1.4.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pluggy-1.4.0
	
	${CROSSTOOLS_DIR}/bin/python3 setup.py build
        ${CROSSTOOLS_DIR}/bin/python3 setup.py install
 #       ${CROSSTOOLS_DIR}/bin/python3 setup.py install --optimize=1
popd 
rm -rf ${BUILD_DIRECTORY}/pluggy-1.4.0
