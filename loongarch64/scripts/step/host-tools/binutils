source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=binutils
export PACKAGE_VERSION=2.45
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/binutils/2.45/
rm -rf ${BUILD_DIRECTORY}/binutils-2.45
tar xvf ${DOWNLOADDIR}/binutils-2.45.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/binutils-2.45
        patch -Np1 -i ${SYSDIR}/files/host-tools/binutils/2.45/patches/8e885fece150ee97e5b0e78363e7fe9888ae9c29.diff 
	 
        rm -rf gdb* libdecnumber readline sim
        mkdir -pv build
        pushd build
		export PATH=/usr/bin
                ../configure --prefix=${PREFIX} --enable-shared --disable-werror \
                             --with-system-zlib --enable-64-bit-bfd
                make -j${JOBS}
                make install
        popd
popd 
rm -rf ${BUILD_DIRECTORY}/binutils-2.45
