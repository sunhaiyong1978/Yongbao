source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=hatch-fancy-pypi-readme
export PACKAGE_VERSION=24.1.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/hatch-fancy-pypi-readme/24.1.0/
rm -rf ${BUILD_DIRECTORY}/hatch_fancy_pypi_readme-24.1.0
tar xvf ${DOWNLOADDIR}/hatch_fancy_pypi_readme-24.1.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/hatch_fancy_pypi_readme-24.1.0
	
	${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user hatch-fancy-pypi-readme
popd 
rm -rf ${BUILD_DIRECTORY}/hatch_fancy_pypi_readme-24.1.0
