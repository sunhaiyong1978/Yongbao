source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=tomli
export PACKAGE_VERSION=2.2.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/tomli/2.2.1/
rm -rf ${BUILD_DIRECTORY}/tomli-2.2.1
tar xvf ${DOWNLOADDIR}/tomli-2.2.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/tomli-2.2.1
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user tomli
popd 
rm -rf ${BUILD_DIRECTORY}/tomli-2.2.1
