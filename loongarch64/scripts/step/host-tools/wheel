source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=wheel
export PACKAGE_VERSION=0.41.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/wheel/0.41.1/
rm -rf ${BUILD_DIRECTORY}/wheel-0.41.1
tar xvf ${DOWNLOADDIR}/wheel-0.41.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/wheel-0.41.1
	
	${CROSSTOOLS_DIR}/bin/python3 setup.py build
        ${CROSSTOOLS_DIR}/bin/python3 setup.py install --optimize=1
popd 
rm -rf ${BUILD_DIRECTORY}/wheel-0.41.1
