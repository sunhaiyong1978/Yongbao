source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=Mako
export PACKAGE_VERSION=1.3.9
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/Mako/1.3.9/
rm -rf ${BUILD_DIRECTORY}/mako-1.3.9
tar xvf ${DOWNLOADDIR}/mako-1.3.9.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/mako-1.3.9
	
	${HOST_TOOLS_DIR}/bin/python3 setup.py build
        ${HOST_TOOLS_DIR}/bin/python3 setup.py install
popd 
rm -rf ${BUILD_DIRECTORY}/mako-1.3.9
