source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=libffi
export PACKAGE_VERSION=3.4.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/libffi/3.4.6/
rm -rf ${BUILD_DIRECTORY}/libffi-3.4.6
tar xvf ${DOWNLOADDIR}/libffi-3.4.6.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libffi-3.4.6
	
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
	 ./configure --prefix=${CROSSTOOLS_DIR} --libdir=${CROSSTOOLS_DIR}/lib${LIB_SUFF} --disable-static --with-gcc-arch=native
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/libffi-3.4.6
