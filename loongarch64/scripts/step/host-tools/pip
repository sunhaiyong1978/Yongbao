source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=pip
export PACKAGE_VERSION=24.3.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/pip/24.3.1/
rm -rf ${BUILD_DIRECTORY}/pip-24.3.1
tar xvf ${DOWNLOADDIR}/pip-24.3.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pip-24.3.1
	
	${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user pip
popd 
rm -rf ${BUILD_DIRECTORY}/pip-24.3.1
