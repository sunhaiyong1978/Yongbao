source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=doctest
export PACKAGE_VERSION=2.4.11
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/doctest/2.4.11/
rm -rf ${BUILD_DIRECTORY}/doctest-2.4.11
tar xvf ${DOWNLOADDIR}/doctest-2.4.11.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/doctest-2.4.11
    
    mkdir -p native-build
    pushd native-build
        meson --prefix=${PREFIX} --libdir=${PREFIX}/lib${LIB_SUFF}  \
              --buildtype=release ..
        ninja
        ninja install
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/doctest-2.4.11
