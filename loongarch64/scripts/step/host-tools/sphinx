source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=sphinx
export PACKAGE_VERSION=8.1.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/sphinx/8.1.3/
rm -rf ${BUILD_DIRECTORY}/sphinx-8.1.3
tar xvf ${DOWNLOADDIR}/sphinx-8.1.3.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/sphinx-8.1.3
	
	${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user sphinx
popd 
rm -rf ${BUILD_DIRECTORY}/sphinx-8.1.3
