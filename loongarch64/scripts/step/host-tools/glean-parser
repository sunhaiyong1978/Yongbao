source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=glean-parser
export PACKAGE_VERSION=13.0.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/glean-parser/13.0.1/
rm -rf ${BUILD_DIRECTORY}/glean_parser-13.0.1
tar xvf ${DOWNLOADDIR}/glean_parser-13.0.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/glean_parser-13.0.1
	
	${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user glean-parser
popd 
rm -rf ${BUILD_DIRECTORY}/glean_parser-13.0.1
