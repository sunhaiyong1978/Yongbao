source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=jsonschema
export PACKAGE_VERSION=4.25.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/jsonschema/4.25.1/
rm -rf ${BUILD_DIRECTORY}/jsonschema-4.25.1
tar xvf ${DOWNLOADDIR}/jsonschema-4.25.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/jsonschema-4.25.1
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user jsonschema
popd 
rm -rf ${BUILD_DIRECTORY}/jsonschema-4.25.1
