source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=patchelf
export PACKAGE_VERSION=0.18.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/patchelf/0.18.0/
rm -rf ${BUILD_DIRECTORY}/patchelf-0.18.0
tar xvf ${DOWNLOADDIR}/patchelf-0.18.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/patchelf-0.18.0
	
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
	 ./configure --prefix=${PREFIX} --libdir=${PREFIX}/lib${LIB_SUFF} 
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/patchelf-0.18.0
