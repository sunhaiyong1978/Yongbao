source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=pkgconf
export PACKAGE_VERSION=2.4.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/pkgconf/2.4.3/
rm -rf ${BUILD_DIRECTORY}/pkgconf-2.4.3
tar xvf ${DOWNLOADDIR}/pkgconf-2.4.3.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pkgconf-2.4.3
        
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
        ./configure --prefix=${PREFIX}
        eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/pkgconf-2.4.3
