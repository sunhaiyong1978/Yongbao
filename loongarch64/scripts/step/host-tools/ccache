source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=ccache
export PACKAGE_VERSION=4.12.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/ccache/4.12.2/
rm -rf ${BUILD_DIRECTORY}/ccache-4.12.2
tar xvf ${DOWNLOADDIR}/ccache-4.12.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/ccache-4.12.2
    
    mkdir -p native-build
    pushd native-build
	CC="gcc" CXX="g++" \
        cmake -DCMAKE_INSTALL_PREFIX=${PREFIX} -DENABLE_TESTING=OFF \
	      -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
              -DCMAKE_BUILD_TYPE=Release ..
	eval ${MAKE_AND_INSTALL}
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/ccache-4.12.2
