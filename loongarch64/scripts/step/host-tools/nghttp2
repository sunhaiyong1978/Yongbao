source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=nghttp2
export PACKAGE_VERSION=1.68.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/nghttp2/1.68.0/
rm -rf ${BUILD_DIRECTORY}/nghttp2-1.68.0
tar xvf ${DOWNLOADDIR}/nghttp2-1.68.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/nghttp2-1.68.0
	
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
	 ./configure --prefix=${PREFIX} --libdir=${PREFIX}/lib${LIB_SUFF} --enable-lib-only
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/nghttp2-1.68.0
