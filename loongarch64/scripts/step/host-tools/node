source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=node
export PACKAGE_VERSION=21.0.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/node/21.0.0/
rm -rf ${BUILD_DIRECTORY}/node-21.0.0
tar xvf ${DOWNLOADDIR}/node-21.0.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/node-21.0.0
    
    export CFLAGS=""
    export CXXFLAGS=""
    ./configure --prefix ${CROSSTOOLS_DIR}
    eval ${MAKE_AND_INSTALL}
    cp -av out/Release/node ${CROSSTOOLS_DIR}/bin/
popd 
rm -rf ${BUILD_DIRECTORY}/node-21.0.0
