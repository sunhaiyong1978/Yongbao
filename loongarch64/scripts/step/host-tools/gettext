source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=gettext
export PACKAGE_VERSION=0.21.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/gettext/0.21.1/
rm -rf ${BUILD_DIRECTORY}/gettext-0.21.1
tar xvf ${DOWNLOADDIR}/gettext-0.21.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gettext-0.21.1
	
	./configure --prefix=${CROSSTOOLS_DIR} --disable-shared
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/gettext-0.21.1
