source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=charset-normalizer
export PACKAGE_VERSION=3.4.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/charset-normalizer/3.4.4/
rm -rf ${BUILD_DIRECTORY}/charset_normalizer-3.4.4
tar xvf ${DOWNLOADDIR}/charset_normalizer-3.4.4.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/charset_normalizer-3.4.4
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user charset-normalizer
popd 
rm -rf ${BUILD_DIRECTORY}/charset_normalizer-3.4.4
