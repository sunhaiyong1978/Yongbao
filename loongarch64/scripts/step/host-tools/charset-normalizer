source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=charset-normalizer
export PACKAGE_VERSION=3.1.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/charset-normalizer/3.1.0/
rm -rf ${BUILD_DIRECTORY}/charset-normalizer-3.1.0
tar xvf ${DOWNLOADDIR}/charset-normalizer-3.1.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/charset-normalizer-3.1.0
	${CROSSTOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${CROSSTOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user charset-normalizer
popd 
rm -rf ${BUILD_DIRECTORY}/charset-normalizer-3.1.0
