source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=scikit-build-core
export PACKAGE_VERSION=0.11.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/scikit-build-core/0.11.6/
rm -rf ${BUILD_DIRECTORY}/scikit_build_core-0.11.6
tar xvf ${DOWNLOADDIR}/scikit_build_core-0.11.6.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/scikit_build_core-0.11.6
	
	${HOST_TOOLS_DIR}/bin/pip3 wheel -w dist --no-build-isolation --no-deps ${PWD}
        ${HOST_TOOLS_DIR}/bin/pip3 install --no-index --find-links dist --no-cache-dir --no-deps --force-reinstall --no-user scikit-build-core
popd 
rm -rf ${BUILD_DIRECTORY}/scikit_build_core-0.11.6
