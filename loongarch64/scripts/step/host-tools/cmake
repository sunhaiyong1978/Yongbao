source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=cmake
export PACKAGE_VERSION=3.27.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/cmake/3.27.3/
rm -rf ${BUILD_DIRECTORY}/cmake-3.27.3
tar xvf ${DOWNLOADDIR}/cmake-3.27.3.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/cmake-3.27.3
    patch -Np1 -i ${SYSDIR}/files/host-tools/cmake/3.27.3/patches/cmake-3.22.3-add-loongarch64-to-checktypesize.patch 
	 
    mkdir -p native-build
    pushd native-build
        cmake -DCMAKE_INSTALL_PREFIX=${CROSSTOOLS_DIR}  \
              -DCMAKE_BUILD_TYPE=RELEASE ..
	eval ${MAKE_AND_INSTALL}
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/cmake-3.27.3
