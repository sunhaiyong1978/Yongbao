source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=unzip
export PACKAGE_VERSION=60
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/unzip/60/
rm -rf ${BUILD_DIRECTORY}/unzip60
tar xvf ${DOWNLOADDIR}/unzip60.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/unzip60
    patch -Np1 -i ${SYSDIR}/files/host-tools/unzip/60/patches/0001-replace-NO_DIR-to-NULL.patch 
	 
    sed -i "s@-DNO_LCHMOD@@g" unix/configure
    make -j${JOBS} -f unix/Makefile CC="gcc -DLARGE_FILE_SUPPORT -DUNICODE_WCHAR -DUNICODE_SUPPORT -std=gnu17" generic
    make prefix=${HOST_TOOLS_DIR} -f unix/Makefile install
popd 
rm -rf ${BUILD_DIRECTORY}/unzip60
