source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=glslang
export PACKAGE_VERSION=14.2.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/glslang/14.2.0/
rm -rf ${BUILD_DIRECTORY}/glslang-14.2.0
tar xvf ${DOWNLOADDIR}/glslang-14.2.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/glslang-14.2.0
    
    mkdir -p native-build
    pushd native-build
	CC="gcc" CXX="g++" \
        cmake -DCMAKE_INSTALL_PREFIX=${CROSSTOOLS_DIR} -DENABLE_OPT=0 \
              -DCMAKE_BUILD_TYPE=RELEASE ..
	eval ${MAKE_AND_INSTALL}
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/glslang-14.2.0
