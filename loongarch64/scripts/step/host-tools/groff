source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=groff
export PACKAGE_VERSION=1.22.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/groff/1.22.4/
rm -rf ${BUILD_DIRECTORY}/groff-1.22.4
tar xvf ${DOWNLOADDIR}/groff-1.22.4.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/groff-1.22.4
	
	./configure --prefix=${CROSSTOOLS_DIR} 
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/groff-1.22.4
