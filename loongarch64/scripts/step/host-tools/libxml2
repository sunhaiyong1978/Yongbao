source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=libxml2
export PACKAGE_VERSION=2.14.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/libxml2/2.14.2/
rm -rf ${BUILD_DIRECTORY}/libxml2-2.14.2
tar xvf ${DOWNLOADDIR}/libxml2-2.14.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxml2-2.14.2
        
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
        ./configure --prefix=${PREFIX} --libdir=${PREFIX}/lib${LIB_SUFF} --with-history --with-icu --with-python=${PREFIX}/bin/python3 PYTHON=python3
        eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/libxml2-2.14.2
