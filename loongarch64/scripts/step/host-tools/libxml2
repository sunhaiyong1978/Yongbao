source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=libxml2
export PACKAGE_VERSION=2.11.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/libxml2/2.11.5/
rm -rf ${BUILD_DIRECTORY}/libxml2-2.11.5
tar xvf ${DOWNLOADDIR}/libxml2-2.11.5.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxml2-2.11.5
	
PKG_CONFIG_PATH=${CROSSTOOLS_DIR}/lib/pkgconfig:${CROSSTOOLS_DIR}/lib64/pkgconfig	./configure --prefix=${CROSSTOOLS_DIR} --with-history --with-icu --with-python=${CROSSTOOLS_DIR}/bin/python3 PYTHON=python3
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/libxml2-2.11.5
