source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=elfutils
export PACKAGE_VERSION=0.192
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/elfutils/0.192/
rm -rf ${BUILD_DIRECTORY}/elfutils-0.192
tar xvf ${DOWNLOADDIR}/elfutils-0.192.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/elfutils-0.192
	
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
	 ./configure --prefix=${PREFIX} --libdir=${PREFIX}/lib${LIB_SUFF}  --disable-debuginfod --enable-libdebuginfod=dummy --enable-maintainer-mode
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/elfutils-0.192
