source env/host-tools/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=host-tools
export STEP_PACKAGENAME=mpfr
export PACKAGE_VERSION=4.2.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/host-tools/mpfr/4.2.1/
rm -rf ${BUILD_DIRECTORY}/mpfr-4.2.1
tar xvf ${DOWNLOADDIR}/mpfr-4.2.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/mpfr-4.2.1
	
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
	 ./configure --prefix=${CROSSTOOLS_DIR} --libdir=${CROSSTOOLS_DIR}/lib${LIB_SUFF} --disable-static --with-gmp=${PREFIX}
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/mpfr-4.2.1
