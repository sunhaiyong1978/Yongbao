source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=ImageMagick
export PACKAGE_VERSION=7.1.1-47
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/ImageMagick/7.1.1-47/
rm -rf ${BUILD_DIRECTORY}/ImageMagick-7.1.1-47
tar xvf ${DOWNLOADDIR}/ImageMagick-7.1.1-47.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/ImageMagick-7.1.1-47
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG}  --enable-malloc0returnsnull
	CC=${CROSS_TARGET}-gcc CXX=${CROSS_TARGET}-g++ make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/ImageMagick-7.1.1-47
