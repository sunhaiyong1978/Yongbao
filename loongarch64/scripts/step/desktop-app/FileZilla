source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=FileZilla
export PACKAGE_VERSION=3.69.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/FileZilla/3.69.3/
rm -rf ${BUILD_DIRECTORY}/filezilla-3.69.3
tar xvf ${DOWNLOADDIR}/FileZilla_3.69.3_src.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/filezilla-3.69.3
	patch -Np1 -i ${SYSDIR}/files/desktop-app/FileZilla/3.69.3/patches/0001-filezilla-3.67.1-fix-build-error.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/FileZilla/3.69.3/patches/0001-remove-wx_config-add-host-parm.patch 
	 
	for config_i in $(find -name "config.sub")
	do
		cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --with-wx-prefix=${SYSROOT_DIR}/usr --with-pugixml=builtin ac_cv_path_xdgopen=/usr/bin/xdg-open --enable-malloc0returnsnull
	CC=${CROSS_TARGET}-gcc CXX=${CROSS_TARGET}-g++ make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/filezilla-3.69.3
