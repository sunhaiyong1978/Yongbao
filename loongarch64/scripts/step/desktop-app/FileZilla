source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=FileZilla
export PACKAGE_VERSION=3.66.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/FileZilla/3.66.0/
rm -rf ${BUILD_DIRECTORY}/filezilla-3.66.0
tar xvf ${DOWNLOADDIR}/FileZilla_3.66.0_src.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/filezilla-3.66.0
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --with-wx-prefix=${SYSROOT_DIR}/usr --with-pugixml=builtin ac_cv_path_xdgopen=/usr/bin/xdg-open --enable-malloc0returnsnull
	make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/filezilla-3.66.0
