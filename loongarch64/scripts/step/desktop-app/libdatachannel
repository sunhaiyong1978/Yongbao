source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=libdatachannel
export PACKAGE_VERSION=0.23.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/libdatachannel/0.23.2/
rm -rf ${BUILD_DIRECTORY}/libdatachannel-0.23.2
tar xvf ${DOWNLOADDIR}/libdatachannel-0.23.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libdatachannel-0.23.2
        patch -Np1 -i ${SYSDIR}/files/desktop-app/libdatachannel/0.23.2/patches/0001-libdatachannel-fix-for-gcc-14.patch 
	 
	mkdir cross-build
	pushd cross-build
        	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++"  \
		cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
		      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
       		      -DCMAKE_INSTALL_PREFIX=/usr \
		      -DBUILD_SHARED_LIBS=ON \
		      -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
		      -DUSE_SYSTEM_USRSCTP=ON -DUSE_SYSTEM_SRTP=ON -DUSE_SYSTEM_JUICE=ON -DUSE_SYSTEM_PLOG=ON -DUSE_SYSTEM_JSON=ON -Wno-dev ..
		eval ${MAKE_AND_INSTALL}
	popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libdatachannel-0.23.2
