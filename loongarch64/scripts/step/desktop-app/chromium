'link_pulseaudio=true'
'symbol_level=0'
'treat_warnings_as_errors=false'
'use_pulseaudio=true'
'use_sysroot=true'
'host_cpu = "x64"'
'target_cpu = "loong64"'
'v8_target_cpu = "loong64"'
'enable_libaom=true'
'is_component_ffmpeg=true'
'enable_ffmpeg_video_decoders=true'
'media_use_ffmpeg=true'
