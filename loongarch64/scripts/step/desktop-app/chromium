rm -rf ${BUILD_DIRECTORY}/chromium-137.0.7151.55
tar xvf ${DOWNLOADDIR}/chromium-137.0.7151.55.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/chromium-137.0.7151.55
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0001-Chromium-126-third_party-crashpad-add-loongarch64-su.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0002-Chromium-137-sandbox-add-loongarch64-support.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0003-Chromium-126-components-add-loongarch64-support.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0004-Chromium-126-third_party-boringssl-add-loongarch64-s.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0005-Chromium-126-base-system-sys_info-add-loongarch64-su.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0006-Chormium-133-get-pagesize-support-for-loongarch64.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0007-Chromium-126-build-config-add-loongarch64-support.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0008-Chromium-126-clang-config-add-loongarch64.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0009-Chromium-131-rust-config-add-loongarch64-support.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0010-Chromium-126-fix-atspi2-version.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0011-Chromium-127-build-ffmpeg-scripts-add-loongarch64-su.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/chromium-124-qt6.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0001-chromium-128-add-mlsx-and-mlasx-for-clang-build.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0002-chromium-128-use-lsx-and-lasx-for-libyuv.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0003-chromium-128-fix-libpng-lsx-define-error.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0001-chromium-128-third_party-libpng-fix-for-loongarch64-.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/chromium/137.0.7151.55/patches/0001-Chromium-136-set-clang-lib-from-lib-to-lib64.patch 
	 
	sed -i "s@llvm-10.0@llvm-16.0@g" third_party/swiftshader/src/Reactor/BUILD.gn
	${CROSSTOOLS_DIR}/qt6/libexec/moc ui/qt/qt_shim.h > ui/qt/qt6_shim_moc.cc
	unset PKG_CONFIG_SYSROOT_DIR PKG_CONFIG_PATH PKG_CONFIG_LIBDIR LDFLAGS

	export PATH=${PATH}:${CROSSTOOLS_DIR}/qt6/bin

	if [ "x${ARCH_NAME}" == "xloongarch64" ]; then
		ln -sfv ${SYSROOT_DIR} build/linux/loongarch64-sysroot
		media/ffmpeg/scripts/build_ffmpeg.py linux x64 --branding=Chrome
		media/ffmpeg/scripts/build_ffmpeg.py linux loong64 --branding=Chrome -- --disable-lasx
		media/ffmpeg/scripts/generate_gn.py
		mkdir -p third_party/ffmpeg/chromium/config/Chrome/linux/loong64/
		cp -a third_party/ffmpeg/build.loong64.linux/Chrome/* third_party/ffmpeg/chromium/config/Chrome/linux/loong64/
	fi

	mkdir -p third_party/node/linux/node-linux-x64/bin/
	cp -a ${HOST_TOOLS_DIR}/bin/node third_party/node/linux/node-linux-x64/bin/
	sed -i "/^NODE_VERSION/s@v22.11.0@$(third_party/node/linux/node-linux-x64/bin/node -v)@g" third_party/node/update_node_binaries

	HOST_LLVM_VERSION="$(${CROSSTOOLS_DIR}/host-llvm-project/bin/llvm-config --version)"
	CLANG_MAIN_VERSION="$(echo ${HOST_LLVM_VERSION} | cut -d. -f1)"

export GN_CONFIG=(
'google_api_key="AIzaSyDxKL42zsPjbke5O8_rPVpVrLrJ8aeE9rQ"'
'google_default_client_id="595013732528-llk8trb03f0ldpqq6nprjp1s79596646.apps.googleusercontent.com"'
'google_default_client_secret="5ntt6GbbkjnTVXx-MSxbmx5e"'
'enable_hangout_services_extension=true'
