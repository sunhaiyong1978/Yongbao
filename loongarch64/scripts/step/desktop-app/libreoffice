source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=libreoffice
export PACKAGE_VERSION=25.2.4.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/
rm -rf ${BUILD_DIRECTORY}/libreoffice-25.2.4.1
tar xvf ${DOWNLOADDIR}/libreoffice-25.2.4.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libreoffice-25.2.4.1
    mkdir -p external/tarballs/
    cp ${RESOURCEDIR}/files/libreoffice-dictionaries-25.2.4.1.tar.xz external/tarballs/
    cp ${RESOURCEDIR}/files/libreoffice-help-25.2.4.1.tar.xz external/tarballs/
    cp ${RESOURCEDIR}/files/libreoffice-translations-25.2.4.1.tar.xz external/tarballs/
    tar xvf ${RESOURCEDIR}/files/tarballs.listfile_dir.tar.gz
    mv tarballs.listfile_dir/* external/tarballs/
    rmdir tarballs.listfile_dir
    tar xvf ${RESOURCEDIR}/files/tarballs_extern.listfile_dir.tar.gz
    mv tarballs_extern.listfile_dir/* external/tarballs/
    rmdir tarballs_extern.listfile_dir
    mkdir -p src
    ln -sv src/libreoffice-help-25.2.4.1/helpcontent2
    ln -sv src/libreoffice-dictionaries-25.2.4.1/dictionaries
    ln -sv src/libreoffice-translations-25.2.4.1/translations

    cp -a ${SYSROOT_DIR}/usr/include/{math,stdlib}.h ${SYSROOT_DIR}/usr/local/include/


    cp -a -f $(automake --print-libdir)/config.{sub,guess} ./
    aclocal -I m4
    patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-libreoffice-24.2.1.1-fix-for-cross-build.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-libreoffice-24.2.0-external-curl-configure-add-witho.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-fix-build-error-at-use-without-java.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-libreoffice-fix-for-gcc-14.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0002-libreoffice-7.6-pdfium-fix-for-gcc14.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0003-libreoffice-7.6-box2d-fix-for-gcc14.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-external-libcmis-add-0001-libcmis-fix-build-error-fo.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-libreoffice-external-bzip2-remove-test-for-cross-bui.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-libreoffice-24.8.0.1-external-xmlsec-add-0001-xmlsec.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-fix-link-miss-zlib.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-external-redland-fix-build-error.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-calc.cxx-fix-build-for-gcc-14.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-xmlsecurity-add-nss-nss.h-header-file.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/25.2.4.1/patches/0001-libreoffice-25.2.3.1-add-gettextlib-for-fix-link-lib.patch 
	 
    sed -i "s@python python3 dnl@python3 python dnl@g" aclocal.m4
    autoconf -I .
    PKG_CONFIG_FOR_BUILD=/bin/pkg-config \
    ./configure CC=${CROSS_TARGET}-gcc CXX=${CROSS_TARGET}-g++ LO_CLANG_CC="${CROSSTOOLS_DIR}/bin/clang -target ${CROSS_TARGET} --sysroot=${SYSROOT_DIR}" LO_CLANG_CXX="${CROSSTOOLS_DIR}/bin/clang++ -target ${CROSS_TARGET} --sysroot=${SYSROOT_DIR}" \
                      --build=${CROSS_HOST} --host=${CROSS_TARGET} --target=${CROSS_TARGET} \
                      --prefix=/usr --libdir=/usr/lib${LIB_SUFF} \
                      --with-lang="zh-CN" --with-vendor=Sunhaiyong \
                      --with-help --with-myspell-dicts \
                      --without-junit --without-system-dicts --disable-dconf --disable-odk \
                      --enable-release-build=yes --without-java \
                      --with-system-curl --with-system-epoxy \
                      --with-system-expat --with-system-graphite --with-system-harfbuzz --with-system-gpgmepp \
                      --with-system-jpeg --with-system-lcms2 --with-system-libtiff \
                      --with-system-libatomic_ops --with-system-libpng --with-system-libxml \
                      --with-system-nss --with-system-openldap --with-system-openssl \
                      --with-system-zlib --with-system-openjpeg --without-system-icu \
                      LIBS="-lstdc++" CXXFLAGS="${CXXFLAGS} -fpermissive -I${SYSROOT_DIR}/usr/include/gpgme++" \
                      --enable-python=no

    PKG_CONFIG_SYSROOT_DIR="" make -j${JOBS} gb_Side=build -rs -f Makefile.gbuild build-tools
    ZIC=/usr/sbin/zic make -j${JOBS} build
    make DESTDIR=${PWD}/dest distro-pack-install
    cp -a ${PWD}/dest/usr ${SYSROOT_DIR}/

    pushd ${PWD}/dest
	find -type f -exec ${CROSS_TARGET}-strip --strip-unneeded '{}' ';'
	cd ..
	mv dest libreoffice-25.2.4.1
	mkdir -pv ${DIST_DIRECTORY}/host/${ARCH_NAME}/libreoffice/$(echo "25.2.4.1" | sed "s@-default@@g")/
	tar -cJf ${DIST_DIRECTORY}/host/${ARCH_NAME}/libreoffice/$(echo "25.2.4.1" | sed "s@-default@@g")/libreoffice-$(echo "25.2.4.1" | sed "s@-default@@g")-${ARCH_NAME}.tar.xz  --exclude=.git* libreoffice-25.2.4.1
	info_pool "生成了可发布的LibreOffice 25.2.4.1 压缩包文件：${DIST_DIRECTORY}/host/${ARCH_NAME}/libreoffice/$(echo "25.2.4.1" | sed "s@-default@@g")/libreoffice-$(echo "25.2.4.1" | sed "s@-default@@g")-${ARCH_NAME}.tar.xz"
    popd

    rm -f ${SYSROOT_DIR}/usr/local/include/{math,stdlib}.h
popd 
rm -rf ${BUILD_DIRECTORY}/libreoffice-25.2.4.1
