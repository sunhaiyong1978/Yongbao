source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=libreoffice
export PACKAGE_VERSION=24.2.3.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/
rm -rf ${BUILD_DIRECTORY}/libreoffice-24.2.3.2
tar xvf ${DOWNLOADDIR}/libreoffice-24.2.3.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libreoffice-24.2.3.2
    mkdir -p external/tarballs/
    cp ${RESOURCEDIR}/files/libreoffice-dictionaries-24.2.3.2.tar.xz external/tarballs/
    cp ${RESOURCEDIR}/files/libreoffice-help-24.2.3.2.tar.xz external/tarballs/
    cp ${RESOURCEDIR}/files/libreoffice-translations-24.2.3.2.tar.xz external/tarballs/
    tar xvf ${RESOURCEDIR}/files/tarballs.listfile_dir.tar.gz
    mv tarballs.listfile_dir/* external/tarballs/
    rmdir tarballs.listfile_dir
    tar xvf ${RESOURCEDIR}/files/tarballs_extern.listfile_dir.tar.gz
    mv tarballs_extern.listfile_dir/* external/tarballs/
    rmdir tarballs_extern.listfile_dir
    mkdir -p src
    ln -sv src/libreoffice-help-24.2.3.2/helpcontent2
    ln -sv src/libreoffice-dictionaries-24.2.3.2/dictionaries
    ln -sv src/libreoffice-translations-24.2.3.2/translations

    cp -a ${SYSROOT_DIR}/usr/include/{math,stdlib}.h ${SYSROOT_DIR}/usr/local/include/


    cp ${CROSSTOOLS_DIR}/share/automake-*/config.* ./
    aclocal -I m4
    patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-libreoffice-24.2.1.1-fix-for-cross-build.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-libreoffice-24.2.1.1-external-liblangtag-fix-for-cro.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-libreoffice-24.2.0-external-curl-configure-add-witho.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-fix-build-error-at-use-without-java.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-libreoffice-fix-for-gcc-14.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-libreoffice-7.6-fix-for-gcc14.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0002-libreoffice-7.6-pdfium-fix-for-gcc14.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0003-libreoffice-7.6-box2d-fix-for-gcc14.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-external-libcmis-add-0001-libcmis-fix-build-error-fo.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-libreoffice-external-bzip2-remove-test-for-cross-bui.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-libreoffice-24.2.1.2-external-xmlsec-add-0001-xmlsec.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/libreoffice-7.6-fix-build-error-for-libxml2-2.12.0.patch 
	patch -Np1 -i ${SYSDIR}/files/desktop-app/libreoffice/24.2.3.2/patches/0001-fix-link-miss-zlib.patch 
	 
    autoconf -I .
    LDFLAGS_FOR_BUILD="-Wl,-rpath-link=${CROSSTOOLS_DIR}/lib:${CROSSTOOLS_DIR}/lib64:${CROSSTOOLS_DIR}/build-tools/lib64 -Wl,-rpath=${CROSSTOOLS_DIR}/lib:${CROSSTOOLS_DIR}/lib64:${CROSSTOOLS_DIR}/build-tools/lib64" \
    PKG_CONFIG_FOR_BUILD=/bin/pkg-config \
    ./configure CC=${CROSS_TARGET}-gcc CXX=${CROSS_TARGET}-g++ \
                      --build=${CROSS_HOST} --host=${CROSS_TARGET} --target=${CROSS_TARGET} \
                      --prefix=/usr --libdir=/usr/lib${LIB_SUFF} \
                      --with-lang="zh-CN" --with-vendor=Sunhaiyong \
                      --with-help --with-myspell-dicts \
                      --without-junit --without-system-dicts --disable-dconf --disable-odk \
                      --enable-release-build=yes --without-java \
                      --with-system-curl --with-system-epoxy \
                      --with-system-expat --with-system-graphite --with-system-harfbuzz --with-system-gpgmepp \
                      --with-system-jpeg --with-system-lcms2 --with-system-libtiff \
                      --with-system-libatomic_ops --with-system-libpng --with-system-libxml \
                      --with-system-nss --with-system-openldap --with-system-openssl \
                      --with-system-zlib --with-system-openjpeg --without-system-icu \
                      LIBS="-lstdc++" CXXFLAGS="${CXXFLAGS} -fpermissive -I${SYSROOT_DIR}/usr/include/gpgme++" \
                      --enable-python=no

    PKG_CONFIG_SYSROOT_DIR="" make -j${JOBS} gb_Side=build -rs -f Makefile.gbuild build-tools
    ZIC=/usr/sbin/zic make -j${JOBS} build
    make DESTDIR=${PWD}/dest distro-pack-install
    cp -a ${PWD}/dest/usr ${SYSROOT_DIR}/

    rm -f ${SYSROOT_DIR}/usr/local/include/{math,stdlib}.h
popd 
rm -rf ${BUILD_DIRECTORY}/libreoffice-24.2.3.2
