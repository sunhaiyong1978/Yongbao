source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=freerdp
export PACKAGE_VERSION=3.17.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/freerdp/3.17.1/
rm -rf ${BUILD_DIRECTORY}/freerdp-3.17.1
tar xvf ${DOWNLOADDIR}/freerdp-3.17.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/freerdp-3.17.1
        
        mkdir cross-build
        pushd cross-build
                CC="clang" CXX="clang++" CFLAGS="${CFLAGS} -target ${CROSS_TARGET} -fuse-ld=lld" CXXFLAGS="${CXXFLAGS} -target ${CROSS_TARGET} -fuse-ld=lld" \
                cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
                      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DBUILD_SHARED_LIBS=ON \
                       -Wno-dev ..
                eval ${MAKE_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/freerdp-3.17.1
