source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=libplacebo
export PACKAGE_VERSION=6.338.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/libplacebo/6.338.2/
rm -rf ${BUILD_DIRECTORY}/libplacebo-6.338.2
tar xvf ${DOWNLOADDIR}/libplacebo-6.338.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libplacebo-6.338.2
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} -Dvulkan-registry=${SYSROOT_DIR}/usr/share/vulkan/registry/vk.xml -Ddemos=false \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libplacebo-6.338.2
