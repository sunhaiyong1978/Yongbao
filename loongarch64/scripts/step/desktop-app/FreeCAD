source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=FreeCAD
export PACKAGE_VERSION=1.0.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/FreeCAD/1.0.2/
rm -rf ${BUILD_DIRECTORY}/FreeCAD-1.0.2
tar xvf ${DOWNLOADDIR}/FreeCAD-1.0.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/FreeCAD-1.0.2
        patch -Np1 -i ${SYSDIR}/files/desktop-app/FreeCAD/1.0.2/patches/0001-FreeCAD-1.0.2-remove-boost_system-require-for-boost-.patch 
	 
	tar xvf ${RESOURCEDIR}/files/FreeCAD-OndselSolver_git.tar.gz -C src/3rdParty/OndselSolver --strip-components=1
	sed -i "s@\${PYTHON_MAIN_DIR}@/usr/lib/python$(cat ${COMMON_DIR}/Python3.version)/site-packages@g" src/Ext/freecad/CMakeLists.txt
        mkdir cross-build
        pushd cross-build
                CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
                cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
                      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DBUILD_SHARED_LIBS=ON \
		      -DFREECAD_QT_MAJOR_VERSION=6 -DQT_DEFAULT_MAJOR_VERSION=6 -DBUILD_FEM=OFF -DBUILD_WEB=OFF -DENABLE_DEVELOPER_TESTS=OFF \
		      -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
                      -Wno-dev ..
                eval ${MAKE_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/FreeCAD-1.0.2
