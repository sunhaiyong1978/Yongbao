source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=inkscape
export PACKAGE_VERSION=git-default
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/inkscape/git-default/
rm -rf ${BUILD_DIRECTORY}/inkscape-git-default_git
tar xvf ${DOWNLOADDIR}/inkscape-git-default_git.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/inkscape-git-default_git
        patch -Np1 -i ${SYSDIR}/files/desktop-app/inkscape/git-default/patches/0001-inkscap-3rdparty-2geom-fix-for-gcc14.patch 
	 
	mkdir cross-build
	pushd cross-build
        	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
		cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release \
	              -DPKG_CONFIG_EXECUTABLE=${CROSSTOOLS_DIR}/bin/${CROSS_TARGET}-pkg-config \
        	      -DCMAKE_SYSROOT=${SYSROOT_DIR} \
	              -DCMAKE_FIND_ROOT_PATH=${SYSROOT_DIR}/usr \
	              -DGETTEXT_MSGFMT_EXECUTABLE=/bin/msgfmt \
        	      -DGETTEXT_MSGMERGE_EXECUTABLE=/bin/msgmerge \
		      -DPython_EXECUTABLE=${CROSSTOOLS_DIR}/bin/${CROSS_TARGET}-python3 \
	              -DPERL_EXECUTABLE=${CROSSTOOLS_DIR}/bin/${CROSS_TARGET}-perl \
        	      -DRuby_EXECUTABLE=${CROSSTOOLS_DIR}/bin/ruby \
	              -DGPERF_EXECUTABLE=/bin/gperf \
		      -DDOXYGEN_EXECUTABLE=/bin/doxygen \
		      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 \
       		      -DCMAKE_INSTALL_PREFIX=/usr \
		      -DBUILD_SHARED_LIBS=ON \
		      -DENABLE_POPPLER=OFF -DGZIP=/usr/bin/gzip -Wno-dev ..
		eval ${MAKE_AND_INSTALL}
	popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/inkscape-git-default_git
