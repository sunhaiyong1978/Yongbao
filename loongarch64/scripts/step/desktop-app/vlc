source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=vlc
export PACKAGE_VERSION=3.0.18
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/vlc/3.0.18/
rm -rf ${BUILD_DIRECTORY}/vlc-3.0.18
tar xvf ${DOWNLOADDIR}/vlc-3.0.18.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/vlc-3.0.18
    patch -Np1 -i ${SYSDIR}/files/desktop-app/vlc/3.0.18/patches/0001-VLC-fix-for-gcc13.patch 
	 
    ./configure ${COMMON_CONFIG} --disable-chromecast
    make -j${JOBS} -C compat
    make -j${JOBS} -C src
    make -C src DESTDIR=${SYSROOT_DIR} install
    eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/vlc-3.0.18
