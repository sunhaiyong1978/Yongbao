source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=octave
export PACKAGE_VERSION=10.3.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/octave/10.3.0/
rm -rf ${BUILD_DIRECTORY}/octave-10.3.0
tar xvf ${DOWNLOADDIR}/octave-10.3.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/octave-10.3.0
        

	export PATH=${PATH}:${CROSSTOOLS_DIR}/qt6/bin

        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
        ./configure ${COMMON_CONFIG} --with-qt=6 --enable-malloc0returnsnull
        CC=${CROSS_TARGET}-gcc CXX=${CROSS_TARGET}-g++ make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/octave-10.3.0
