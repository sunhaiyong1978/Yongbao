source env/desktop-app/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=desktop-app
export STEP_PACKAGENAME=pangomm
export PACKAGE_VERSION=2.52.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/desktop-app/pangomm/2.52.0/
rm -rf ${BUILD_DIRECTORY}/pangomm-2.52.0
tar xvf ${DOWNLOADDIR}/pangomm-2.52.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pangomm-2.52.0
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} -Dmaintainer-mode=false \
                      ..
		sed -i "s@gi-docgen \(index\|generate\|gen-index\|gen-deps\|search\|check\|serve\) @& --add-include-path ${SYSROOT_DIR}/usr/share/gir-1.0/ @g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pangomm-2.52.0
