source env/computer_language/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=computer_language
export STEP_PACKAGENAME=bubblewrap
export PACKAGE_VERSION=0.8.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/computer_language/bubblewrap/0.8.0/
rm -rf ${BUILD_DIRECTORY}/bubblewrap-0.8.0
tar xvf ${DOWNLOADDIR}/bubblewrap-0.8.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/bubblewrap-0.8.0
	
	mkdir cross-build
	pushd cross-build
		meson ${MESON_CONFIG}  \
                      ..
		sed -i -e "s@\(${SYSROOT_DIR}/\)usr\(.*\)\(g-ir-compiler\|g-ir-scanner\)@${CROSSTOOLS_DIR}/\2${CROSS_TARGET}-\3@g" build.ninja
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/bubblewrap-0.8.0
