source env/lightdm/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=lightdm
export STEP_PACKAGENAME=lightdm-gtk-greeter
export PACKAGE_VERSION=2.0.8
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/lightdm/lightdm-gtk-greeter/2.0.8/
rm -rf ${BUILD_DIRECTORY}/lightdm-gtk-greeter-2.0.8
tar xvf ${DOWNLOADDIR}/lightdm-gtk-greeter-2.0.8.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/lightdm-gtk-greeter-2.0.8
	
	for config_i in $(find -name "config.sub")
	do
		cp -a -f ${CROSSTOOLS_DIR}/share/automake*/config.* $(dirname ${config_i})/
	done
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --libexecdir=/usr/lib/lightdm --sbindir=/usr/bin --with-libxklavier --enable-kill-on-sigterm --disable-libido --disable-libindicator --disable-maintainer-mode --enable-malloc0returnsnull
	make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR} install
	rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/lightdm-gtk-greeter-2.0.8
