source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=SDL2
export PACKAGE_VERSION=2.30.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/SDL2/2.30.2/
rm -rf ${BUILD_DIRECTORY}/SDL2-2.30.2
tar xvf ${DOWNLOADDIR}/SDL2-2.30.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/SDL2-2.30.2
    ./configure ${COMMON_CONFIG}
    make -j${JOBS} WAYLAND_SCANNER=wayland-scanner
    make DESTDIR=${LINUX_SYSROOT_DIR} install
popd 
rm -rf ${BUILD_DIRECTORY}/SDL2-2.30.2
