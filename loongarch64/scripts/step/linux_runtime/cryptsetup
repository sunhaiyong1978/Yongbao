source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=cryptsetup
export PACKAGE_VERSION=2.8.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/cryptsetup/2.8.1/
rm -rf ${BUILD_DIRECTORY}/cryptsetup-2.8.1
tar xvf ${DOWNLOADDIR}/cryptsetup-2.8.1.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/cryptsetup-2.8.1
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --disable-asciidoc --disable-ssh-token --with-tmpfilesdir=/usr/lib/tmpfiles.d --enable-malloc0returnsnull
	CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" make -j${JOBS}
        make DESTDIR=${LINUX_SYSROOT_DIR} install
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/cryptsetup-2.8.1
