source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=gst-plugins-ugly
export PACKAGE_VERSION=1.24.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/gst-plugins-ugly/1.24.4/
rm -rf ${BUILD_DIRECTORY}/gst-plugins-ugly-1.24.4
tar xvf ${DOWNLOADDIR}/gst-plugins-ugly-1.24.4.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gst-plugins-ugly-1.24.4
	
	mkdir cross-build
	pushd cross-build
		LDFLAGS="${LDFLAGS} -lm" meson ${MESON_CONFIG} --default-library=both -Dgpl=enabled \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gst-plugins-ugly-1.24.4
