source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=xtrans
export PACKAGE_VERSION=1.5.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/xtrans/1.5.0/
rm -rf ${BUILD_DIRECTORY}/xtrans-1.5.0
tar xvf ${DOWNLOADDIR}/xtrans-1.5.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/xtrans-1.5.0
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG}  --enable-malloc0returnsnull
	CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" make -j${JOBS}
        make DESTDIR=${LINUX_SYSROOT_DIR} install
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/xtrans-1.5.0
