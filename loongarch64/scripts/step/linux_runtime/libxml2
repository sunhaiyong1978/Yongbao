source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=libxml2
export PACKAGE_VERSION=2.14.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/libxml2/2.14.2/
rm -rf ${BUILD_DIRECTORY}/libxml2-2.14.2
tar xvf ${DOWNLOADDIR}/libxml2-2.14.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxml2-2.14.2
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --with-history --with-icu --without-python --enable-malloc0returnsnull
	CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" make -j${JOBS}
        make DESTDIR=${LINUX_SYSROOT_DIR} install
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libxml2-2.14.2
