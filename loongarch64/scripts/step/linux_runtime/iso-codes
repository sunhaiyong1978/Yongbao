source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=iso-codes
export PACKAGE_VERSION=4.19.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/iso-codes/4.19.0/
rm -rf ${BUILD_DIRECTORY}/iso-codes-4.19.0
tar xvf ${DOWNLOADDIR}/iso-codes_4.19.0.orig.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/iso-codes-4.19.0
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG}  as_ln_s="ln -sf" --enable-malloc0returnsnull
	CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" make -j${JOBS}
        make DESTDIR=${LINUX_SYSROOT_DIR} install
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/iso-codes-4.19.0
