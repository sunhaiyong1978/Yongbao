source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=libxcvt
export PACKAGE_VERSION=0.1.3
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/libxcvt/0.1.3/
rm -rf ${BUILD_DIRECTORY}/libxcvt-0.1.3
tar xvf ${DOWNLOADDIR}/libxcvt-0.1.3.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxcvt-0.1.3
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} --default-library=both  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libxcvt-0.1.3
