source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=libxkbcommon
export PACKAGE_VERSION=xkbcommon-1.7.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/libxkbcommon/xkbcommon-1.7.0/
rm -rf ${BUILD_DIRECTORY}/libxkbcommon-xkbcommon-1.7.0
tar xvf ${DOWNLOADDIR}/libxkbcommon-xkbcommon-1.7.0.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libxkbcommon-xkbcommon-1.7.0
    sed -i -e "/wayland_scanner_dep =/s@, native: true@@g" \
           -e "/wayland_scanner =/s@find_program\(.*\)\$@find_program('wayland-scanner')@g" \
           meson.build
    mkdir cross-build
    pushd cross-build
        meson ${MESON_CONFIG} -Dxkb-config-root=/usr/share/X11/xkb ..
	eval ${NINJA_AND_INSTALL}
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/libxkbcommon-xkbcommon-1.7.0
