source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=fribidi
export PACKAGE_VERSION=1.0.15
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/fribidi/1.0.15/
rm -rf ${BUILD_DIRECTORY}/fribidi-1.0.15
tar xvf ${DOWNLOADDIR}/fribidi-1.0.15.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/fribidi-1.0.15
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} --default-library=both -Ddocs=false \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/fribidi-1.0.15
