source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=gst-libav
export PACKAGE_VERSION=1.24.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/gst-libav/1.24.5/
rm -rf ${BUILD_DIRECTORY}/gst-libav-1.24.5
tar xvf ${DOWNLOADDIR}/gst-libav-1.24.5.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/gst-libav-1.24.5
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} --default-library=both  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/gst-libav-1.24.5
