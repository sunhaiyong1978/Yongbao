source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=openssl
export PACKAGE_VERSION=3.3.1
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/openssl/3.3.1/
rm -rf ${BUILD_DIRECTORY}/openssl-3.3.1
tar xvf ${DOWNLOADDIR}/openssl-3.3.1.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/openssl-3.3.1

	case "${ARCH_NAME}" in
		"i686")
			OPENSSL_CONFIG_NAME="linux-x86"
			;;
		*)
			OPENSSL_CONFIG_NAME=""
			;;
	esac

	CC="${LINUX_HOST}-gcc" \
	./Configure --prefix=/usr --openssldir=/etc/ssl \
				--libdir=lib${LIB_SUFF} shared zlib ${OPENSSL_CONFIG_NAME}
	sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile
	eval ${MAKE_AND_INSTALL}
popd 
rm -rf ${BUILD_DIRECTORY}/openssl-3.3.1
