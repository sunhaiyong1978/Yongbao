source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=ocl-icd
export PACKAGE_VERSION=2.3.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/ocl-icd/2.3.2/
rm -rf ${BUILD_DIRECTORY}/ocl-icd-2.3.2
tar xvf ${DOWNLOADDIR}/ocl-icd-2.3.2.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/ocl-icd-2.3.2
        
	sed -i "/SUBDIRS/s@doc @@g" Makefile.am
        for config_i in $(find -name "config.sub")
        do
                cp -a -f $(automake --print-libdir)/config.{sub,guess} $(dirname ${config_i})/
        done
        if [ ! -f configure ]; then
                autoreconf -ifv
        fi
        ./configure ${COMMON_CONFIG} --enable-malloc0returnsnull
        CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" make -j${JOBS}
        make DESTDIR=${LINUX_SYSROOT_DIR} install
        rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/ocl-icd-2.3.2
