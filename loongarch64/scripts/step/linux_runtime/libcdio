source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=libcdio
export PACKAGE_VERSION=2.1.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/libcdio/2.1.0/
rm -rf ${BUILD_DIRECTORY}/libcdio-2.1.0
tar xvf ${DOWNLOADDIR}/libcdio-2.1.0.tar.bz2 -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libcdio-2.1.0
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	CFLAGS="${CFLAGS} -Wno-implicit-function-declaration -Wno-error=format-security" ./configure ${COMMON_CONFIG}  --enable-malloc0returnsnull
	CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" make -j${JOBS}
        make DESTDIR=${LINUX_SYSROOT_DIR} install
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libcdio-2.1.0
