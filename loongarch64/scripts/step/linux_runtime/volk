source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=volk
export PACKAGE_VERSION=1.3.270
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/volk/1.3.270/
rm -rf ${BUILD_DIRECTORY}/volk-1.3.270
tar xvf ${DOWNLOADDIR}/volk-1.3.270.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/volk-1.3.270
        
	mkdir cross-build
	pushd cross-build
        	CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" \
		cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release \
		      -DCMAKE_INSTALL_LIBDIR=/usr/lib${LIB_SUFF} \
		      -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross-${ARCH_NAME}.cmake \
       		      -DCMAKE_INSTALL_PREFIX=/usr -DVOLK_INSTALL=ON -Wno-dev ..
		eval ${MAKE_AND_INSTALL}
	popd
        rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/volk-1.3.270
