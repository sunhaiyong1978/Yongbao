source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=nghttp2
export PACKAGE_VERSION=1.64.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/nghttp2/1.64.0/
rm -rf ${BUILD_DIRECTORY}/nghttp2-1.64.0
tar xvf ${DOWNLOADDIR}/nghttp2-1.64.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/nghttp2-1.64.0
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --enable-lib-only --enable-malloc0returnsnull
	CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" make -j${JOBS}
        make DESTDIR=${LINUX_SYSROOT_DIR} install
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/nghttp2-1.64.0
