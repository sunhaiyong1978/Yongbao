source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=libgphoto2
export PACKAGE_VERSION=2.5.31
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/libgphoto2/2.5.31/
rm -rf ${BUILD_DIRECTORY}/libgphoto2-2.5.31
tar xvf ${DOWNLOADDIR}/libgphoto2-2.5.31.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libgphoto2-2.5.31
	
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	CFLAGS="${CFLAGS} -Wno-incompatible-pointer-types" ./configure ${COMMON_CONFIG}  --enable-malloc0returnsnull
	CC="${LINUX_HOST}-gcc" CXX="${LINUX_HOST}-g++" make -j${JOBS}
        make DESTDIR=${LINUX_SYSROOT_DIR} install
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libgphoto2-2.5.31
