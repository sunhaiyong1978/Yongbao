source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=cairo
export PACKAGE_VERSION=1.18.2
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/cairo/1.18.2/
rm -rf ${BUILD_DIRECTORY}/cairo-1.18.2
tar xvf ${DOWNLOADDIR}/cairo-1.18.2.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/cairo-1.18.2
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} --default-library=both  \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/cairo-1.18.2
