source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=zstd
export PACKAGE_VERSION=1.5.6
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/zstd/1.5.6/
rm -rf ${BUILD_DIRECTORY}/zstd-1.5.6
tar xvf ${DOWNLOADDIR}/zstd-1.5.6.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/zstd-1.5.6
	make -j${JOBS} CC="${LINUX_HOST}-gcc" PREFIX=/usr LIBDIR=/usr/lib${LIB_SUFF}
	make CC="${LINUX_HOST}-gcc" PREFIX=/usr LIBDIR=/usr/lib${LIB_SUFF} DESTDIR=${LINUX_SYSROOT_DIR} install
popd 
rm -rf ${BUILD_DIRECTORY}/zstd-1.5.6
