source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=wayland
export PACKAGE_VERSION=1.23.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/wayland/1.23.0/
rm -rf ${BUILD_DIRECTORY}/wayland-1.23.0
tar xvf ${DOWNLOADDIR}/wayland-1.23.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/wayland-1.23.0
    sed -i "/wayland_scanner_for_build =/s@find\(.*\)\$@'${CROSSTOOLS_DIR}/host-tools/bin/wayland-scanner'@g" src/meson.build
    sed -i -e "/scanner_dep = dependency('wayland-scanner'/d" src/meson.build
    mkdir cross-build
    pushd cross-build
	meson ${MESON_CONFIG} \
              ..
	eval ${NINJA_AND_INSTALL}
    popd
popd 
rm -rf ${BUILD_DIRECTORY}/wayland-1.23.0
echo "#!/bin/bash -e
qemu-${QEMU_ARCH} ${LINUX_SYSROOT_DIR}/usr/bin/wayland-scanner \"\$@\"" \
                > ${CROSS_TOOLS_PREFIX}/bin/${LINUX_HOST}-wayland-scanner
chmod +x ${CROSS_TOOLS_PREFIX}/bin/${LINUX_HOST}-wayland-scanner
cp -v ${CROSS_TOOLS_PREFIX}/bin/{${LINUX_HOST}-,}wayland-scanner
