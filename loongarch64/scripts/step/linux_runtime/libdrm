source env/linux_runtime/config
source env/distro.info
source env/function.sh
source env/linux_runtime/custom
export STEP_BUILDNAME=linux_runtime
export STEP_PACKAGENAME=libdrm
export PACKAGE_VERSION=2.4.124
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/linux_runtime/libdrm/2.4.124/
rm -rf ${BUILD_DIRECTORY}/libdrm-2.4.124
tar xvf ${DOWNLOADDIR}/libdrm-2.4.124.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libdrm-2.4.124
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} --default-library=both -Detnaviv=enabled -Dudev=true -Dintel=enabled \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${LINUX_SYSROOT_DIR}/usr/lib${LIB_SUFF}/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libdrm-2.4.124
