source env/mingw_sysroot/config
source env/distro.info
source env/function.sh
source env/mingw_sysroot/custom
export STEP_BUILDNAME=mingw_sysroot
export STEP_PACKAGENAME=mingw-libpng
export PACKAGE_VERSION=1.6.40
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/mingw_sysroot/mingw-libpng/1.6.40/
rm -rf ${BUILD_DIRECTORY}/libpng-1.6.40
tar xvf ${DOWNLOADDIR}/libpng-1.6.40.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/libpng-1.6.40
	patch -Np1 -i ${SYSDIR}/files/mingw_sysroot/mingw-libpng/1.6.40/patches/libpng-1.6.37-apng.patch 
	 
	if [ ! -f configure ]; then
		autoreconf -ifv
	fi
	 ./configure ${COMMON_CONFIG} --enable-static  --enable-malloc0returnsnull
	CC="${MINGW_HOST}-gcc" CXX="${MINGW_HOST}-g++" make -j${JOBS}
        make DESTDIR=${SYSROOT_DIR}/usr/lib/mingw/sys-root install
	rm -f ${SYSROOT_DIR}/usr/lib/mingw/sys-root/mingw/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/libpng-1.6.40
