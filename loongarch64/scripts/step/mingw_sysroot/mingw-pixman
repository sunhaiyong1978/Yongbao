source env/mingw_sysroot/config
source env/distro.info
source env/function.sh
source env/mingw_sysroot/custom
export STEP_BUILDNAME=mingw_sysroot
export STEP_PACKAGENAME=mingw-pixman
export PACKAGE_VERSION=0.46.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/mingw_sysroot/mingw-pixman/0.46.4/
rm -rf ${BUILD_DIRECTORY}/pixman-0.46.4
tar xvf ${DOWNLOADDIR}/pixman-0.46.4.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/pixman-0.46.4
	
	mkdir cross-build
	pushd cross-build
		 meson ${MESON_CONFIG} --default-library=static -Dlibpng=disabled \
                      ..
		eval ${NINJA_AND_INSTALL}
	popd
	rm -f ${MINGW_SYSROOT_DIR}/mingw/lib/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/pixman-0.46.4
