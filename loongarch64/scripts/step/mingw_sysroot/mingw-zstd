source env/mingw_sysroot/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=mingw_sysroot
export STEP_PACKAGENAME=mingw-zstd
export PACKAGE_VERSION=1.5.5
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/mingw_sysroot/mingw-zstd/1.5.5/
rm -rf ${BUILD_DIRECTORY}/zstd-1.5.5
tar xvf ${DOWNLOADDIR}/zstd-1.5.5.tar.gz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/zstd-1.5.5
	pushd build/meson

        mkdir cross-build
        pushd cross-build
                meson ${MESON_CONFIG} --default-library=static \
                      ..
                ninja
                DESTDIR=${MINGW_SYSROOT_DIR} ninja install
        popd
        rm -f ${MINGW_SYSROOT_DIR}/mingw/lib/*.la

	popd
popd 
rm -rf ${BUILD_DIRECTORY}/zstd-1.5.5
