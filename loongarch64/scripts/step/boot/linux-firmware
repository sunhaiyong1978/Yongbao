source env/boot/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=boot
export STEP_PACKAGENAME=linux-firmware
export PACKAGE_VERSION=20230919
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/boot/linux-firmware/20230919/
rm -rf ${BUILD_DIRECTORY}/linux-firmware-20230919
tar xvf ${DOWNLOADDIR}/linux-firmware-20230919.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/linux-firmware-20230919
	make DESTDIR=${SYSROOT_DIR} install
popd 
rm -rf ${BUILD_DIRECTORY}/linux-firmware-20230919
