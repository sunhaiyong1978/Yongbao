source env/KDE6/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=KDE6
export STEP_PACKAGENAME=KDE6-akonadi-search
export PACKAGE_VERSION=25.08.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/KDE6/KDE6-akonadi-search/25.08.0/
rm -rf ${BUILD_DIRECTORY}/akonadi-search-25.08.0
tar xvf ${DOWNLOADDIR}/akonadi-search-25.08.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/akonadi-search-25.08.0
        
	mkdir cross-build
	pushd cross-build
		export _PYTHON_HOST_PLATFORM=linux-loongarch64 _PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET}
        	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++"  \
		cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
		      -DPython_EXECUTABLE=${HOST_TOOLS_DIR}/bin/python3 \
		      -DPython3_EXECUTABLE=${HOST_TOOLS_DIR}/bin/python3 \
		      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
       		      -DCMAKE_INSTALL_PREFIX=/usr \
		      -DBUILD_SHARED_LIBS=ON \
		      -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
		      -DUPDATE_MIME_DATABASE_EXECUTABLE=${SYSDIR}/cross-tools/bin/update-mime-database -DXSLTPROC_EXECUTABLE=/bin/xsltproc -DXAPIAN_SHARED_LIBRARY=${SYSROOT_DIR}/usr/lib64/libxapian.so -Wno-dev ..
		eval ${MAKE_AND_INSTALL}
	popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/akonadi-search-25.08.0
