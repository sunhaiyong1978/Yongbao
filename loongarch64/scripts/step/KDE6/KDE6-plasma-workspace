source env/KDE6/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=KDE6
export STEP_PACKAGENAME=KDE6-plasma-workspace
export PACKAGE_VERSION=6.4.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/KDE6/KDE6-plasma-workspace/6.4.4/
rm -rf ${BUILD_DIRECTORY}/plasma-workspace-6.4.4
tar xvf ${DOWNLOADDIR}/plasma-workspace-6.4.4.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/plasma-workspace-6.4.4
        patch -Np1 -i ${SYSDIR}/files/KDE6/KDE6-plasma-workspace/6.4.4/patches/0001-plasma-workspace-6.1.4-fix-for-build-error.patch 
	 
	mkdir cross-build
	pushd cross-build
		export _PYTHON_HOST_PLATFORM=linux-loongarch64 _PYTHON_SYSCONFIGDATA_NAME=_sysconfigdata__linux_${CROSS_TARGET}
        	CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++"  \
		cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
		      -DPython_EXECUTABLE=${HOST_TOOLS_DIR}/bin/python3 \
		      -DPython3_EXECUTABLE=${HOST_TOOLS_DIR}/bin/python3 \
		      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
       		      -DCMAKE_INSTALL_PREFIX=/usr \
		      -DBUILD_SHARED_LIBS=ON \
		      -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
		       -Wno-dev ..
		eval ${MAKE_AND_INSTALL}
	popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/plasma-workspace-6.4.4
