source env/KDE6/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=KDE6
export STEP_PACKAGENAME=KDE6-plasma-desktop
export PACKAGE_VERSION=6.4.4
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/KDE6/KDE6-plasma-desktop/6.4.4/
rm -rf ${BUILD_DIRECTORY}/plasma-desktop-6.4.4
tar xvf ${DOWNLOADDIR}/plasma-desktop-6.4.4.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/plasma-desktop-6.4.4
        patch -Np1 -i ${SYSDIR}/files/KDE6/KDE6-plasma-desktop/6.4.4/patches/0001-plasma-desktop-set-taskmanager-default-applets.patch 
	 
	sed -i "s@pkg_get_variable(XKBDIR xkeyboard-config xkb_base)@set(XKBDIR /usr/share/xkeyboard-config-2)@g" ConfigureChecks.cmake
        mkdir cross-build
        pushd cross-build
                CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
                cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
                      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DBUILD_SHARED_LIBS=ON \
                      -Wno-dev ..
                eval ${MAKE_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/plasma-desktop-6.4.4
