source env/KDE6/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=KDE6
export STEP_PACKAGENAME=KDE6-kpackage
export PACKAGE_VERSION=6.17.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/KDE6/KDE6-kpackage/6.17.0/
rm -rf ${BUILD_DIRECTORY}/kpackage-6.17.0
tar xvf ${DOWNLOADDIR}/kpackage-6.17.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/kpackage-6.17.0
        
        mkdir cross-build
        pushd cross-build
                CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++" \
                cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
                      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DBUILD_SHARED_LIBS=ON \
                      -Wno-dev ..
                eval ${MAKE_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/kpackage-6.17.0

echo "qemu-loongarch64 ${SYSROOT_DIR}/usr/bin/kpackagetool6 \"\$@\"" \
        > ${CROSSTOOLS_DIR}/bin/kpackagetool6
chmod +x ${CROSSTOOLS_DIR}/bin/kpackagetool6
