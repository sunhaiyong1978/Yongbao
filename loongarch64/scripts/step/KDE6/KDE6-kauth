source env/KDE6/config
source env/distro.info
source env/function.sh
export STEP_BUILDNAME=KDE6
export STEP_PACKAGENAME=KDE6-kauth
export PACKAGE_VERSION=6.20.0
export RESOURCEDIR=${NEW_TARGET_SYSDIR}/files/KDE6/KDE6-kauth/6.20.0/
rm -rf ${BUILD_DIRECTORY}/kauth-6.20.0
tar xvf ${DOWNLOADDIR}/kauth-6.20.0.tar.xz -C ${BUILD_DIRECTORY} 
pushd ${BUILD_DIRECTORY}/kauth-6.20.0
        
        mkdir cross-build
        pushd cross-build
                CC="${CROSS_TARGET}-gcc" CXX="${CROSS_TARGET}-g++"  \
                cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=${COMMON_DIR}/cmake-cross.cmake \
                      -DCMAKE_INSTALL_LIBDIR=/usr/lib64 -DLIB_SUFFIX=64 -DCMAKE_INSTALL_LIBEXECDIR=/usr/libexec \
                      -DCMAKE_INSTALL_PREFIX=/usr \
                      -DBUILD_SHARED_LIBS=ON \
                       -Wno-dev ..
                eval ${MAKE_AND_INSTALL}
        popd
        rm -f ${SYSROOT_DIR}/usr/lib64/*.la
popd 
rm -rf ${BUILD_DIRECTORY}/kauth-6.20.0

mkdir -pv ${CROSSTOOLS_DIR}/libexec/kf6/kauth
echo "qemu-loongarch64 ${SYSROOT_DIR}/usr/libexec/kf6/kauth/kauth-policy-gen \"\$@\"" \
        > ${CROSSTOOLS_DIR}/libexec/kf6/kauth/kauth-policy-gen
chmod +x ${CROSSTOOLS_DIR}/libexec/kf6/kauth/kauth-policy-gen
